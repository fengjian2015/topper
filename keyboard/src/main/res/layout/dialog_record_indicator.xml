<?xml version="1.0" encoding="utf-8"?>
<ViewFlipper
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/vf_record"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="bottom|center"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_record_dialog"
        android:gravity="bottom|center"
        android:minWidth="@dimen/x320"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_record_start"
            android:layout_width="@dimen/x160"
            android:layout_height="@dimen/y240"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_record_start"/>

        <ImageView
            android:id="@+id/iv_record_amp"
            android:layout_width="@dimen/x160"
            android:layout_height="@dimen/y240"
            android:layout_alignBottom="@+id/iv_record_start"
            android:layout_toEndOf="@+id/iv_record_start"
            android:layout_toRightOf="@+id/iv_record_start"
            android:background="@drawable/amp1"/>

        <TextView
            android:layout_width="@dimen/x320"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_record_start"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:minHeight="@dimen/x80"
            android:text="@string/tip_record_cancel_top"
            android:textColor="#FFFF"
            android:textSize="@dimen/x28"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_record_dialog"
        android:gravity="center_horizontal"
        android:minWidth="@dimen/x320"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_record_cancel"
            android:layout_width="@dimen/x320"
            android:layout_height="@dimen/y240"
            android:src="@drawable/ic_record_cancel"/>

        <TextView
            android:id="@+id/tip_record_cancel"
            android:layout_width="@dimen/x320"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_record_cancel"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_record_cancel"
            android:gravity="center"
            android:minHeight="@dimen/y80"
            android:text="@string/tip_record_cancel"
            android:textColor="#FFFF"
            android:textSize="@dimen/x28"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_record_dialog"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/x320"
            android:layout_height="@dimen/y240"
            android:src="@drawable/ic_record_short"/>

        <TextView
            android:id="@+id/tv_record_short"
            android:layout_width="@dimen/x320"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_record_cancel"
            android:gravity="center"
            android:minHeight="@dimen/y80"
            android:text="@string/tip_record_short"
            android:textColor="#FFFF"
            android:textSize="@dimen/x28"/>
    </LinearLayout>

</ViewFlipper>