<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginBottom="@dimen/y30"
    android:layout_height="@dimen/y130"
    android:layout_marginLeft="@dimen/x20"
    android:layout_marginRight="@dimen/x20"
    app:cardCornerRadius="@dimen/x15">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_coin"
            android:layout_width="@dimen/x80"
            android:layout_height="@dimen/x80"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x30"/>

        <TextView
            android:id="@+id/coin_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x20"
            android:layout_toRightOf="@+id/iv_coin"
            android:text="比特币"
            android:textColor="@color/black"
            android:textSize="@dimen/x30"/>

        <TextView
            android:id="@+id/tv_coin_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x40"
            android:layout_toLeftOf="@+id/btn_tixian"
            android:text="0.00"
            android:textSize="@dimen/x26"/>

        <Button
            android:id="@+id/btn_tixian"
            android:layout_width="@dimen/x120"
            android:layout_height="@dimen/y50"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x30"
            android:background="@drawable/bg_buysell_shape"
            android:text="提币"
            android:textColor="@color/blue2"
            android:textSize="@dimen/x26"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>