<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/shallow_gray"
    tools:context="com.bclould.tea.ui.activity.FileOpenActivity">
    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/white">

        <ImageView
            android:id="@+id/bark"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="@dimen/x20"
            android:src="@mipmap/icon_nav_return"/>

        <TextView
            android:id="@+id/title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/file_preview"
            android:textColor="@color/black"
            android:singleLine="true"
            android:maxEms="14"
            android:textSize="@dimen/x32"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/xx"
        style="@style/HCutOffRule"
        android:layout_below="@+id/rl_title"/>

    <ImageView
        android:id="@+id/tv_type"
        android:layout_width="@dimen/x300"
        android:layout_height="@dimen/y300"
        android:src="@mipmap/type_unknown"
        android:layout_marginTop="@dimen/y40"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/x36"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/x30"/>
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y15"
        android:layout_above="@+id/rl_btn"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:layout_marginTop="@dimen/y30"
        android:visibility="gone"
        android:progressDrawable="@drawable/bg_progress_bar"/>
    <Button
        android:id="@+id/btn_open"
        android:layout_width="@dimen/x500"
        android:layout_height="@dimen/y80"
        android:background="@drawable/btn_blue_selector"
        android:text="@string/open_another_application"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/x32"
        android:layout_marginTop="@dimen/y30"
        android:visibility="gone"/>
</LinearLayout>
