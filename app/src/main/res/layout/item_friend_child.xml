<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <TextView
        android:id="@+id/catalog"
        style="@style/SecondaryTextStyle28"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/boundary_color"
        android:paddingBottom="@dimen/y5"
        android:paddingLeft="@dimen/x30"
        android:paddingTop="@dimen/y5"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y119"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/friend_child_touxiang"
            android:layout_width="@dimen/x80"
            android:layout_height="@dimen/y80"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x30"
            android:src="@mipmap/img_nfriend_headshot1"/>

        <TextView
            android:id="@+id/friend_child_name"
            style="@style/MainTextShallowStyle32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x30"
            android:layout_toRightOf="@+id/friend_child_touxiang"
            android:text="好友昵称"/>

        <!--<TextView
            android:id="@+id/friend_child_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x30"
            android:text="离线"
            android:textColor="@color/red"
            android:textSize="@dimen/x28"/>-->

    </RelativeLayout>

    <TextView
        style="@style/HorizontalBoundaryStyle"/>

</LinearLayout>