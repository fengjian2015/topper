<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y120"
                android:layout_marginLeft="@dimen/x30"
                android:layout_marginRight="@dimen/x30"
                android:background="@drawable/bg_shallow_shape"
                android:layout_marginBottom="@dimen/y30"
                android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/x40"
        android:orientation="vertical">

        <TextView
            android:id="@+id/type_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="安子-转账"
            style="@style/MainTextShallowStyle30"/>

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/type_name"
            android:layout_marginTop="@dimen/y10"
            android:text="2017-09-02 14:23"
            style="@style/SecondaryTextStyle24"/>
    </LinearLayout>

    <TextView
        android:id="@+id/money_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/x40"
        android:layout_marginRight="@dimen/x20"
        android:layout_toLeftOf="@+id/imageview"
        android:text="+$4561"
        style="@style/RedTextStyle28"/>

    <ImageView
        android:id="@+id/imageview"
        android:layout_width="@dimen/x15"
        android:layout_height="@dimen/x25"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/x40"
        android:src="@mipmap/icon_aboutus_turninto"/>

</RelativeLayout>