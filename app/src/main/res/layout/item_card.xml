<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bank_card"
    android:layout_width="@dimen/x400"
    android:layout_height="@dimen/x230"
    android:layout_gravity="center"
    app:cardBackgroundColor="@color/transparent"
    app:cardCornerRadius="@dimen/x10"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/rl_all"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/icon_copy"/>

            <TextView
                android:id="@+id/tv_title"
                style="@style/MainTextShallowStyle36"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x30"
                android:src="@mipmap/logo_bankcard_boc"
                android:text="@string/receipt_payment"/>

        </LinearLayout>


        <TextView
            android:id="@+id/tv_count"
            style="@style/SecondaryTextStyle24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/y10"
            android:layout_marginLeft="@dimen/x10"
            android:text="1-3"
            android:textColor="@color/purple_color"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>