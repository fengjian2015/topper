<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:background="@color/white">

        <ImageView
            android:id="@+id/bark"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="@dimen/x20"
            android:src="@mipmap/icon_nav_return"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="身份验证"
            android:textColor="@color/black"
            android:textSize="@dimen/x32"/>

    </RelativeLayout>

    <TextView
        style="@style/HCutOffRule"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x80"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x20"
            android:text="必填"
            android:textColor="@color/black"
            android:textSize="@dimen/x28"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginTop="@dimen/y25"
            android:text="*"
            android:textColor="@color/red"/>

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        app:cardCornerRadius="@dimen/x15">

        <RelativeLayout
            android:id="@+id/rl_autonym_attestation"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y120">

            <ImageView
                android:id="@+id/imageview"
                android:layout_width="@dimen/x30"
                android:layout_height="@dimen/x35"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x35"
                android:src="@mipmap/icon_check_name"/>

            <TextView
                android:id="@+id/textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x20"
                android:layout_toRightOf="@+id/imageview"
                android:text="实名验证"
                android:textColor="#888888"
                android:textSize="@dimen/x28"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginTop="@dimen/y35"
                android:layout_toRightOf="@+id/textview"
                android:text="*"
                android:textColor="@color/red"/>

            <ImageView
                android:layout_width="@dimen/x15"
                android:layout_height="@dimen/x25"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x25"
                android:src="@mipmap/iocn_person_turninto"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:layout_marginTop="@dimen/y20"
        app:cardCornerRadius="@dimen/x15">

        <RelativeLayout
            android:id="@+id/rl_phone_autonym"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y120">

            <ImageView
                android:id="@+id/imageview2"
                android:layout_width="@dimen/x30"
                android:layout_height="@dimen/x35"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x35"
                android:src="@mipmap/icon_check_email"/>

            <TextView
                android:id="@+id/textview2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x20"
                android:layout_toRightOf="@+id/imageview2"
                android:text="手机实名"
                android:textColor="#888888"
                android:textSize="@dimen/x28"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginTop="@dimen/y35"
                android:layout_toRightOf="@+id/textview2"
                android:text="*"
                android:textColor="@color/red"/>

            <ImageView
                android:layout_width="@dimen/x15"
                android:layout_height="@dimen/x25"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x25"
                android:src="@mipmap/iocn_person_turninto"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:layout_marginTop="@dimen/y20"
        app:cardCornerRadius="@dimen/x15">

        <RelativeLayout
            android:id="@+id/rl_bank_binding"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y120">

            <ImageView
                android:id="@+id/imageview3"
                android:layout_width="@dimen/x30"
                android:layout_height="@dimen/x35"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x35"
                android:src="@mipmap/icon_check_card"/>

            <TextView
                android:id="@+id/textview3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x20"
                android:layout_toRightOf="@+id/imageview3"
                android:text="银行卡绑定"
                android:textColor="#888888"
                android:textSize="@dimen/x28"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginTop="@dimen/y35"
                android:layout_toRightOf="@+id/textview3"
                android:text="*"
                android:textColor="@color/red"/>

            <ImageView
                android:layout_width="@dimen/x15"
                android:layout_height="@dimen/x25"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x25"
                android:src="@mipmap/iocn_person_turninto"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>