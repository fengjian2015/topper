<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg_color"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y80"
        android:src="@mipmap/icon_pay_c1"/>

    <TextView
        android:id="@+id/tv_pay_type"
        style="@style/MainTextShallowStyle36"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y30"
        android:text="@string/payment_succeed"/>

    <TextView
        android:id="@+id/tv_coin_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y30"
        android:text="0.1TPC"
        android:textColor="@color/main_text_color"
        android:textSize="@dimen/x50"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_who"
        style="@style/MainTextShallowStyle30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y50"/>

    <ImageView
        android:id="@+id/tv_touxiang"
        android:layout_width="@dimen/x100"
        android:layout_height="@dimen/x100"
        android:layout_marginTop="@dimen/y30"
        android:src="@mipmap/img_nfriend_headshot1"/>

    <TextView
        android:id="@+id/tv_name"
        style="@style/MainTextShallowStyle32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y30"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/btn_finish"
        style="@style/ShortBtnStyle"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y100"
        android:text="@string/confirm"/>

</LinearLayout>