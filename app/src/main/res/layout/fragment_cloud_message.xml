<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <View
        android:id="@+id/status_bar_fix"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#00000000"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/cloud_circle_menu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/talk"
                    android:textColor="@drawable/menu_text_color_selector"
                    android:textSize="@dimen/y32"/>

                <TextView
                    android:id="@+id/yunxin_xx"
                    android:layout_width="@dimen/x65"
                    android:layout_height="@dimen/y2"
                    android:layout_marginTop="@dimen/y8"
                    android:background="@color/black"
                    android:visibility="invisible"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x70"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/friend"
                    android:textColor="@drawable/menu_text_color_selector"
                    android:textSize="@dimen/y32"/>

                <TextView
                    android:id="@+id/haoyou_xx"
                    android:layout_width="@dimen/x65"
                    android:layout_height="@dimen/y2"
                    android:layout_marginTop="@dimen/y8"
                    android:background="@color/black"
                    android:visibility="invisible"/>

            </LinearLayout>



        </LinearLayout>

        <RelativeLayout
            android:id="@+id/cloud_circle_add"
            android:layout_width="@dimen/x100"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">

            <ImageView
                android:layout_width="@dimen/x35"
                android:layout_height="@dimen/y35"
                android:layout_centerInParent="true"
                android:src="@mipmap/icon_nav_add"/>
        </RelativeLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/xx"
        style="@style/HCutOffRule"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/cloud_circle_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>

</LinearLayout>