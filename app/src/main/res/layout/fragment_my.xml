<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/light"
              android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:background="@color/white"
        android:gravity="center"
        android:text="我"
        android:textColor="@color/black"
        android:textSize="@dimen/x35"/>

    <TextView
        style="@style/HCutOffRule"/>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/y180"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:layout_marginTop="@dimen/y30"
        app:cardCornerRadius="@dimen/x15">

        <RelativeLayout
            android:id="@+id/rl_personal_data"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_touxiang"
                android:layout_width="@dimen/x100"
                android:layout_height="@dimen/x100"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x30"
                android:src="@mipmap/img_nfriend_headshot1"/>

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/iv_touxiang"
                android:layout_marginLeft="@dimen/x20"
                android:layout_toRightOf="@+id/iv_touxiang"
                android:text="安子"
                android:textColor="@color/black"
                android:textSize="@dimen/x35"/>

            <TextView
                android:id="@+id/iv_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/iv_touxiang"
                android:layout_marginLeft="@dimen/x20"
                android:layout_toRightOf="@id/iv_touxiang"
                android:text="ID：12"/>

            <ImageView
                android:layout_width="@dimen/x70"
                android:layout_height="@dimen/x70"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x50"
                android:src="@mipmap/qr_code"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        app:cardCornerRadius="@dimen/x15"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginTop="@dimen/y30"
        android:layout_marginRight="@dimen/x30"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y120">

        <RelativeLayout
            android:id="@+id/rl_autonym_attestation"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x30"
            android:id="@+id/iv"
            android:layout_width="wrap_content"
            android:src="@mipmap/iocn_person_check"
            android:layout_height="wrap_content"/>

            <TextView
                android:text="@string/authentication"
                android:layout_toRightOf="@+id/iv"
                android:layout_centerVertical="true"
                android:textSize="@dimen/x28"
                android:textColor="@color/black"
                android:layout_marginLeft="@dimen/x30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_width="wrap_content"
                android:src="@mipmap/iocn_person_turn"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x30"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        app:cardCornerRadius="@dimen/x15"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginTop="@dimen/y30"
        android:layout_marginRight="@dimen/x30"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y120">

        <RelativeLayout
            android:id="@+id/rl_security_center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x30"
                android:id="@+id/iv2"
                android:layout_width="wrap_content"
                android:src="@mipmap/icon_person_safe"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="安全中心"
                android:layout_toRightOf="@+id/iv2"
                android:layout_centerVertical="true"
                android:textSize="@dimen/x28"
                android:textColor="@color/black"
                android:layout_marginLeft="@dimen/x30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_width="wrap_content"
                android:src="@mipmap/iocn_person_turn"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x30"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        app:cardCornerRadius="@dimen/x15"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginTop="@dimen/y30"
        android:layout_marginRight="@dimen/x30"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y120">

        <RelativeLayout
            android:id="@+id/rl_system_set"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x30"
                android:id="@+id/iv3"
                android:layout_width="wrap_content"
                android:src="@mipmap/iocn_person_set"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="系统设置"
                android:layout_toRightOf="@+id/iv3"
                android:layout_centerVertical="true"
                android:textSize="@dimen/x28"
                android:textColor="@color/black"
                android:layout_marginLeft="@dimen/x30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_width="wrap_content"
                android:src="@mipmap/iocn_person_turn"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x30"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
