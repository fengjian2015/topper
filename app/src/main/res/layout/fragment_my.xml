<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg_color"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <View
                android:id="@+id/status_bar_fix"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="#00000000"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/y450"
                android:background="@mipmap/icon_me_bg"/>

            <RelativeLayout
                android:id="@+id/rl_personal_data"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y280"
                android:layout_marginLeft="@dimen/x20"
                android:layout_marginRight="@dimen/x20"
                android:layout_marginTop="@dimen/y250"
                android:background="@drawable/bg_bright_shape">

                <RelativeLayout
                    android:id="@+id/rl_already_login"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/iv_touxiang"
                        android:layout_width="@dimen/x150"
                        android:layout_height="@dimen/x150"
                        android:layout_marginLeft="@dimen/x30"
                        android:layout_marginTop="@dimen/y30"
                        android:src="@mipmap/img_nfriend_headshot1"/>

                    <TextView
                        style="@style/MainTextDeepStyle30"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="@dimen/y30"
                        android:layout_marginLeft="@dimen/x30"
                        android:layout_marginTop="@dimen/y30"
                        android:text="@string/greet_hint"/>

                    <TextView
                        android:id="@+id/tv_name"
                        style="@style/MainTextDeepStyle36"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/y60"
                        android:layout_alignTop="@+id/iv_touxiang"
                        android:layout_marginLeft="@dimen/x50"
                        android:layout_marginTop="@dimen/y30"
                        android:layout_toRightOf="@+id/iv_touxiang"/>

                    <ImageView
                        android:layout_width="@dimen/x80"
                        android:layout_height="@dimen/x80"
                        android:layout_alignParentRight="true"
                        android:layout_alignTop="@+id/iv_touxiang"
                        android:layout_marginRight="@dimen/x50"
                        android:layout_marginTop="@dimen/y30"
                        android:src="@mipmap/qr_code"/>
                </RelativeLayout>

                <RelativeLayout
                    android:visibility="gone"
                    android:id="@+id/rl_no_login"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_login"
                            android:layout_width="@dimen/x150"
                            android:layout_height="@dimen/x150"
                            android:layout_marginLeft="@dimen/x30"
                            android:layout_marginTop="@dimen/y30"
                            android:src="@mipmap/icon_notlogin_img"/>

                        <TextView
                            style="@style/MainTextDeepStyle36"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/x30"
                            android:text="@string/qi_login"/>

                    </LinearLayout>

                    <TextView
                        style="@style/MainTextDeepStyle30"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="@dimen/y30"
                        android:layout_marginLeft="@dimen/x30"
                        android:layout_marginTop="@dimen/y30"
                        android:text="@string/my_no_login_hint"/>


                </RelativeLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_personal_data"
                android:layout_marginLeft="@dimen/x20"
                android:layout_marginRight="@dimen/x20"
                android:layout_marginTop="@dimen/y30"
                android:background="@drawable/bg_shallow_shape"
                android:orientation="vertical"
                android:paddingBottom="@dimen/y10"
                android:paddingTop="@dimen/y10">
                <RelativeLayout
                    android:id="@+id/rl_mission_center"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y110"
                    android:paddingBottom="@dimen/y20"
                    android:paddingTop="@dimen/y20">

                    <ImageView
                        android:id="@+id/iv14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x30"
                        android:src="@mipmap/icon_task"/>

                    <TextView
                        style="@style/MainTextShallowStyle30"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x30"
                        android:layout_toRightOf="@+id/iv14"
                        android:text="@string/receive_bonus"/>

                    <ImageView
                        android:layout_width="@dimen/x15"
                        android:layout_height="@dimen/x25"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="14dp"
                        android:layout_marginRight="14dp"
                        android:src="@mipmap/iocn_person_turninto" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_announcement"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y110"
                    android:paddingBottom="@dimen/y20"
                    android:paddingTop="@dimen/y20">

                    <ImageView
                        android:id="@+id/iv13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x30"
                        android:src="@mipmap/icon_notice"/>

                    <TextView
                        style="@style/MainTextShallowStyle30"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x30"
                        android:layout_toRightOf="@+id/iv13"
                        android:text="@string/system_notification"/>

                    <ImageView
                        android:layout_width="@dimen/x15"
                        android:layout_height="@dimen/x25"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="14dp"
                        android:layout_marginRight="14dp"
                        android:src="@mipmap/iocn_person_turninto" />

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rl_collect"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y110"
                    android:paddingBottom="@dimen/y20"
                    android:paddingTop="@dimen/y20">

                    <ImageView
                        android:id="@+id/iv4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x30"
                        android:src="@mipmap/icon_me_collection"/>

                    <TextView
                        style="@style/MainTextShallowStyle30"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x30"
                        android:layout_toRightOf="@+id/iv4"
                        android:text="@string/my_collect"/>

                    <ImageView
                        android:layout_width="@dimen/x15"
                        android:layout_height="@dimen/x25"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/x25"
                        android:src="@mipmap/iocn_person_turninto"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_dynamic"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y110"
                    android:paddingBottom="@dimen/y20"
                    android:paddingTop="@dimen/y20">

                    <ImageView
                        android:id="@+id/iv5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x30"
                        android:src="@mipmap/icon_me_circlefriend"/>

                    <TextView
                        style="@style/MainTextShallowStyle30"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x30"
                        android:layout_toRightOf="@+id/iv5"
                        android:text="@string/my_friends_circle"/>

                    <ImageView
                        android:layout_width="@dimen/x15"
                        android:layout_height="@dimen/x25"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/x25"
                        android:src="@mipmap/iocn_person_turninto"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_security_center"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y110"
                    android:paddingBottom="@dimen/y20"
                    android:paddingTop="@dimen/y20">

                    <ImageView
                        android:id="@+id/iv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x30"
                        android:src="@mipmap/icon_person_safe"/>

                    <TextView
                        style="@style/MainTextShallowStyle30"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x30"
                        android:layout_toRightOf="@+id/iv2"
                        android:text="@string/user_safety"/>

                    <ImageView
                        android:layout_width="@dimen/x15"
                        android:layout_height="@dimen/x25"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/x25"
                        android:src="@mipmap/iocn_person_turninto"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_my_team"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y110"
                    android:paddingBottom="@dimen/y20"
                    android:paddingTop="@dimen/y20"
                    >

                    <ImageView
                        android:id="@+id/iv6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x30"
                        android:src="@mipmap/my_team"/>

                    <TextView
                        style="@style/MainTextShallowStyle30"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x30"
                        android:layout_toRightOf="@+id/iv6"
                        android:text="@string/my_team"/>

                    <ImageView
                        android:layout_width="@dimen/x15"
                        android:layout_height="@dimen/x25"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/x25"
                        android:src="@mipmap/iocn_person_turninto"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rl_participation_profit"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y110"
                    android:paddingBottom="@dimen/y20"
                    android:paddingTop="@dimen/y20"
                    >

                    <ImageView
                        android:id="@+id/iv7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x30"
                        android:src="@mipmap/iocn_participation_profit"/>

                    <TextView
                        style="@style/MainTextShallowStyle30"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x30"
                        android:layout_toRightOf="@+id/iv7"
                        android:text="@string/participation_profit"/>

                    <ImageView
                        android:layout_width="@dimen/x15"
                        android:layout_height="@dimen/x25"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/x25"
                        android:src="@mipmap/iocn_person_turninto"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rl_account_binding"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y110"
                    android:paddingBottom="@dimen/y20"
                    android:paddingTop="@dimen/y20"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/iv8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x30"
                        android:src="@mipmap/iocn_account_binding"/>

                    <TextView
                        style="@style/MainTextShallowStyle30"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x30"
                        android:layout_toRightOf="@+id/iv8"
                        android:text="@string/account_binding"/>

                    <ImageView
                        android:layout_width="@dimen/x15"
                        android:layout_height="@dimen/x25"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/x25"
                        android:src="@mipmap/iocn_person_turninto"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rl_system_set"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y110"
                    android:paddingBottom="@dimen/y20"
                    android:paddingTop="@dimen/y20">

                    <ImageView
                        android:id="@+id/iv3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x30"
                        android:src="@mipmap/iocn_person_set"/>

                    <TextView
                        android:id="@+id/tv"
                        style="@style/MainTextShallowStyle30"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x30"
                        android:layout_toRightOf="@+id/iv3"
                        android:text="@string/system_set"/>

                    <!--<TextView
                        android:visibility="gone"
                        android:id="@+id/tv_new_update"
                        android:layout_width="@dimen/x80"
                        android:layout_height="@dimen/y40"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x20"
                        android:layout_toRightOf="@+id/tv"
                        android:textSize="@dimen/x28"
                        android:background="@drawable/bg_new_update"
                        android:gravity="center"
                        android:text="New"
                        android:textColor="@color/white"/>-->

                    <ImageView
                        android:layout_width="@dimen/x15"
                        android:layout_height="@dimen/x25"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/x25"
                        android:src="@mipmap/iocn_person_turninto"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_concern_we"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y110"
                    android:paddingBottom="@dimen/y20"
                    android:paddingTop="@dimen/y20"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/iv_concern_we"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x30"
                        android:src="@mipmap/iocn_aboutus"/>


                    <TextView
                        android:id="@+id/tv2"
                        style="@style/MainTextShallowStyle30"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x30"
                        android:layout_toRightOf="@+id/iv_concern_we"
                        android:text="@string/guanyu_me"/>

                    <TextView
                        android:id="@+id/tv_new_update"
                        android:layout_width="@dimen/x80"
                        android:layout_height="@dimen/y40"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x20"
                        android:layout_toRightOf="@+id/tv2"
                        android:background="@drawable/bg_new_update"
                        android:gravity="center"
                        android:text="New"
                        android:textColor="@color/white"
                        android:textSize="@dimen/x28"
                        android:visibility="gone"/>

                    <ImageView
                        android:layout_width="@dimen/x15"
                        android:layout_height="@dimen/x25"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/x25"
                        android:src="@mipmap/iocn_person_turninto"/>

                </RelativeLayout>

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
