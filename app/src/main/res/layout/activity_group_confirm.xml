<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/app_bg_color"
              android:orientation="vertical">

    <RelativeLayout
        style="@style/TopNavigationBarStyle">

        <ImageView
            android:id="@+id/bark"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="@dimen/x20"
            android:src="@mipmap/icon_nav_return"/>

    </RelativeLayout>

    <TextView
        style="@style/HorizontalBoundaryStyle"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_bg_color"
        android:paddingBottom="@dimen/y40">

        <ImageView
            android:id="@+id/iv_touxiang"
            android:layout_width="@dimen/x120"
            android:layout_height="@dimen/y120"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y40"/>

        <TextView
            android:id="@+id/name"
            style="@style/MainTextShallowStyle36"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_touxiang"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y30"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_add"
        style="@style/MainTextShallowStyle36"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y64"
        android:gravity="center_horizontal"
        android:text="@string/has_joined_room"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btn_add"
        style="@style/LongBtnStyle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y64"
        android:text="@string/add_this_room"/>
</LinearLayout>
