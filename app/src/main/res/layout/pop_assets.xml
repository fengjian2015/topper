<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="@dimen/x130"
              android:background="@drawable/bg_assets_pop_shape"
              android:gravity="center_vertical"
              android:orientation="horizontal">

    <Button
        android:id="@+id/btn_in_coin"
        android:layout_width="@dimen/x130"
        android:layout_height="@dimen/y70"
        android:layout_marginLeft="@dimen/x40"
        android:background="@drawable/bg_green_shape"
        android:text="充币"
        android:textColor="@color/white"
        android:textSize="@dimen/x28"/>

    <Button
        android:id="@+id/btn_out_coin"
        android:layout_width="@dimen/x130"
        android:layout_height="@dimen/y70"
        android:layout_marginLeft="@dimen/x30"
        android:background="@drawable/bg_payway_shape"
        android:text="提币"
        android:textColor="@color/white"
        android:textSize="@dimen/x28"/>

    <Button
        android:id="@+id/btn_transfer_accounts"
        android:layout_width="@dimen/x130"
        android:layout_height="@dimen/y70"
        android:layout_marginLeft="@dimen/x30"
        android:background="@drawable/bg_btc4_shape"
        android:text="转账"
        android:textColor="@color/white"
        android:textSize="@dimen/x28"/>

    <ImageView
        android:id="@+id/iv_jiantou"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingRight="@dimen/x20"
        android:paddingLeft="@dimen/x20"
        android:src="@mipmap/icon_close"/>

</LinearLayout>