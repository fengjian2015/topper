<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@mipmap/img_register_bg"
              android:fitsSystemWindows="true"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/bark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/x30"
        android:src="@mipmap/icon_where_renturn"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y250"
        android:gravity="center"
        android:text="选择国家"
        android:textColor="@color/white"
        android:textSize="@dimen/x40"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y120"
        android:layout_marginLeft="@dimen/x100"
        android:layout_marginRight="@dimen/x100">

        <Button
            android:id="@+id/area_number"
            android:layout_width="@dimen/x100"
            android:layout_height="@dimen/y50"
            android:layout_gravity="right|bottom"
            android:layout_marginBottom="@dimen/y40"
            android:layout_marginRight="@dimen/x40"
            android:background="@drawable/bg_yzcode_shape"
            android:text="+86"
            android:textColor="#2E5773"
            android:textSize="@dimen/x26"/>

        <ImageView
            android:layout_width="@dimen/x15"
            android:layout_height="@dimen/x15"
            android:layout_gravity="right"
            android:layout_marginBottom="@dimen/y40"
            android:layout_marginRight="@dimen/x10"
            android:layout_marginTop="@dimen/y48"
            android:src="@mipmap/icon_click_triangle_selected"/>

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="请输入手机号码"
            android:inputType="number"
            android:maxLength="4"
            android:textColor="@color/black"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/x28"
            android:theme="@style/MyEditText"/>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y120"
        android:layout_marginLeft="@dimen/x100"
        android:layout_marginRight="@dimen/x100">

        <Button
            android:id="@+id/banner"
            android:layout_width="@dimen/x80"
            android:layout_height="@dimen/y55"
            android:layout_gravity="right|bottom"
            android:layout_marginBottom="@dimen/y40"
            android:layout_marginRight="@dimen/x40"
            android:background="@mipmap/img_flag_msg"
            android:textSize="@dimen/x26"/>

        <ImageView
            android:layout_width="@dimen/x15"
            android:layout_height="@dimen/x15"
            android:layout_gravity="right"
            android:layout_marginBottom="@dimen/y40"
            android:layout_marginRight="@dimen/x10"
            android:layout_marginTop="@dimen/y48"
            android:src="@mipmap/icon_click_triangle"/>

        <EditText
            android:id="@+id/state"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="中华人民共和国"
            android:inputType="number"
            android:maxLength="4"
            android:textColor="@color/black"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/x28"
            android:theme="@style/MyEditText"/>

    </FrameLayout>

</LinearLayout>