    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        app:cardCornerRadius="@dimen/x10">

        <LinearLayout
            android:id="@+id/ll_pay_pw"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y120"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_pay_password"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="15"
                android:background="@android:color/transparent"
                android:hint="@string/et_password"
                android:inputType="numberPassword"
                android:maxLength="6"
                android:paddingLeft="@dimen/x20"
                android:paddingRight="@dimen/x20"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/x26"/>

            <RelativeLayout
                android:id="@+id/rl_show_hidden"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2">


                <ImageView
                    android:id="@+id/eye"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/password_selector"/>

            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/y60"
        android:layout_marginLeft="@dimen/x25"
        android:gravity="center"
        android:text="密码6位，只支持数字、字母组合、区分大小写、不支持特殊符号。"
        android:textSize="@dimen/x22"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        app:cardCornerRadius="@dimen/x10">

        <LinearLayout
            android:id="@+id/ll_pay_pw2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y120"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_pay_password2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="15"
                android:background="@android:color/transparent"
                android:hint="@string/et_password"
                android:inputType="numberPassword"
                android:maxLength="6"
                android:paddingLeft="@dimen/x20"
                android:paddingRight="@dimen/x20"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/x26"/>

            <RelativeLayout
                android:id="@+id/rl_show_hidden2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2">


                <ImageView
                    android:id="@+id/eye2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/password_selector"/>
            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/btn_finish"
        android:layout_width="@dimen/x450"
        android:layout_height="@dimen/y80"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y100"
        android:background="@drawable/btn_blue_selector"
        android:text="@string/finish"
        android:textColor="@color/white"/>

</LinearLayout>