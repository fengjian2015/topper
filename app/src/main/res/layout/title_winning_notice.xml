<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_winning"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="@dimen/y100"
    android:background="#B3e53131">
    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@mipmap/icon_horn"
        android:paddingRight="@dimen/x20"
        android:paddingLeft="@dimen/x30"/>
    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/iv_shut_down"
        android:layout_toRightOf="@+id/image"
        style="@style/MainTextShallowStyle30"
        android:gravity="center_vertical"
        android:singleLine="true"/>
    <ImageView
        android:id="@+id/iv_shut_down"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:src="@mipmap/icon_sh_cancel1"
        android:paddingRight="@dimen/x30"
        android:paddingLeft="@dimen/x30"/>
</RelativeLayout>