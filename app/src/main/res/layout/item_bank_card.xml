<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_card"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y300"
    android:layout_gravity="center"
    android:background="@drawable/bg_bank_card_shape"
    android:padding="@dimen/x20">

    <!--
        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/x80"
            android:layout_height="@dimen/x80"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginTop="@dimen/y30"
            android:src="@mipmap/logo_bankcard_boc"/>-->

    <TextView
        android:id="@+id/tv_logo"
        android:layout_width="@dimen/x80"
        android:layout_height="@dimen/x80"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginTop="@dimen/y40"
        android:background="@drawable/bg_oval_shape"
        android:gravity="center"
        android:text="é“¶"
        android:textColor="@color/black"
        android:textSize="@dimen/x35"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/bank_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginTop="@dimen/y30"
        android:layout_toRightOf="@+id/tv_logo"
        android:textColor="@color/white"
        android:textSize="@dimen/x32"/>

    <TextView
        android:id="@+id/card_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bank_name"
        android:layout_marginLeft="@dimen/x32"
        android:layout_toRightOf="@+id/tv_logo"
        android:textColor="@color/white"
        android:textSize="@dimen/x28"/>

    <TextView
        android:id="@+id/bank_card_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/y40"
        android:layout_marginLeft="@dimen/x35"
        android:textColor="@color/white"
        android:textSize="@dimen/x36"/>

    <ImageView
        android:id="@+id/iv_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="@dimen/x20"
        android:src="@mipmap/ico_bankcard_delete"
        android:textSize="@dimen/x28"
        android:visibility="gone"/>

</RelativeLayout>
