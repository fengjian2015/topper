<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/app_bg_color"
              android:orientation="vertical"
              tools:activity="com.bclould.tea.ui.activity.IndividualDetailsActivity">

    <RelativeLayout
        style="@style/TopNavigationBarStyle">

        <ImageView
            android:id="@+id/bark"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="@dimen/x20"
            android:src="@mipmap/icon_nav_return"/>

        <TextView
            style="@style/MainTextShallowStyle36"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/detailed_information"/>
    </RelativeLayout>

    <TextView
        style="@style/HorizontalBoundaryStyle"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_data"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/y40"
            android:visibility="gone">

            <RelativeLayout
                android:id="@+id/rl_qr"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/y180"
                android:layout_marginLeft="@dimen/x20"
                android:layout_marginRight="@dimen/x20"
                android:layout_marginTop="@dimen/y20"
                android:background="@drawable/bg_shallow_shape"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/iv_head"
                    android:layout_width="@dimen/x120"
                    android:layout_height="@dimen/x120"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x30"/>

                <TextView
                    android:id="@+id/tv_name"
                    style="@style/MainTextShallowStyle32"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x20"
                    android:layout_toRightOf="@+id/iv_head"/>

                <ImageView
                    android:id="@+id/image_qr"
                    android:layout_width="@dimen/x60"
                    android:layout_height="@dimen/x60"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/x25"
                    android:src="@mipmap/qr_code"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_dynamic"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/y140"
                android:layout_marginLeft="@dimen/x20"
                android:layout_marginRight="@dimen/x20"
                android:layout_marginTop="@dimen/y20"
                android:background="@drawable/bg_shallow_shape"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tv1"
                    style="@style/MainTextShallowStyle32"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x30"
                    android:text="@string/personal_dynamic"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/x30"
                    android:layout_marginRight="@dimen/x45"
                    android:layout_toRightOf="@+id/tv1"
                    android:gravity="center_vertical|right">

                    <ImageView
                        android:id="@+id/image1"
                        android:layout_width="@dimen/x110"
                        android:layout_height="@dimen/y110"
                        />

                    <ImageView
                        android:id="@+id/image2"
                        android:layout_width="@dimen/x110"
                        android:layout_height="@dimen/y110"
                        />

                    <ImageView
                        android:id="@+id/image3"
                        android:layout_width="@dimen/x110"
                        android:layout_height="@dimen/y110"
                        />

                    <ImageView
                        android:id="@+id/image4"
                        android:layout_width="@dimen/x110"
                        android:layout_height="@dimen/y110"
                        />
                </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/x15"
                    android:layout_height="@dimen/x25"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/x25"
                    android:src="@mipmap/iocn_person_turninto"/>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_no_look_ta_dy"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y100"
                android:layout_marginLeft="@dimen/x20"
                android:layout_marginRight="@dimen/x20"
                android:layout_marginTop="@dimen/y20"
                android:background="@drawable/bg_shallow_shape">

                <TextView
                    android:id="@+id/tv6"
                    style="@style/MainTextShallowStyle30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x30"
                    android:text="@string/no_look_ta_dy"/>

                <ImageView
                    android:id="@+id/on_off_dy"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/x25"
                    android:src="@drawable/set_disturb_seletor"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_no_look_ta_dy2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y100"
                android:layout_marginLeft="@dimen/x20"
                android:layout_marginRight="@dimen/x20"
                android:layout_marginTop="@dimen/y20"
                android:background="@drawable/bg_shallow_shape">

                <TextView
                    android:id="@+id/tv7"
                    style="@style/MainTextShallowStyle30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x30"
                    android:text="@string/no_look_ta_dy2"/>

                <ImageView
                    android:id="@+id/on_off_dy2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/x25"
                    android:src="@drawable/set_disturb_seletor"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_cache"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y100"
                android:layout_marginLeft="@dimen/x20"
                android:layout_marginRight="@dimen/x20"
                android:layout_marginTop="@dimen/y20"
                android:background="@drawable/bg_shallow_shape">

                <TextView
                    android:id="@+id/tv2"
                    style="@style/MainTextShallowStyle30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x30"
                    android:text="@string/region"/>

                <TextView
                    android:id="@+id/tv_region"
                    style="@style/SecondaryTextStyle28"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/x25"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_remark"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y100"
                android:layout_marginLeft="@dimen/x20"
                android:layout_marginRight="@dimen/x20"
                android:layout_marginTop="@dimen/y20"
                android:background="@drawable/bg_shallow_shape">

                <TextView
                    android:id="@+id/tv3"
                    style="@style/MainTextShallowStyle30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x30"
                    android:text="@string/remark"/>

                <TextView
                    android:id="@+id/tv_remark"
                    style="@style/SecondaryTextStyle28"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/x25"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_card"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y100"
                android:layout_marginLeft="@dimen/x20"
                android:layout_marginRight="@dimen/x20"
                android:layout_marginTop="@dimen/y20"
                android:background="@drawable/bg_shallow_shape">

                <TextView
                    android:id="@+id/tv4"
                    style="@style/MainTextShallowStyle30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x30"
                    android:text="@string/business_card"/>

                <TextView
                    android:id="@+id/tv5"
                    style="@style/BlueTextStyle28"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/x25"
                    android:text="@string/share"/>

            </RelativeLayout>

            <Button
                android:id="@+id/btn_send"
                style="@style/ShortBtnStyle"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/y64"
                android:text="@string/send_message"/>

            <Button
                android:id="@+id/btn_brak"
                style="@style/ShortBtnStyle"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/y30"
                android:text="@string/delete"/>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/ll_error"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_ununited"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/img_wrong"/>

        <TextView
            style="@style/MainTextShallowStyle30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y50"
            android:text="@string/loading_error_anew_loading_hint2"/>

    </LinearLayout>

</LinearLayout>
