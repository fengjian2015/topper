<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg_color"
    android:orientation="vertical"
    tools:context="com.bclould.tea.ui.activity.FinancialActivity">
    <include
        android:id="@+id/rl_title"
        layout="@layout/activity_top"/>

    <LinearLayout
        android:id="@+id/ll_error"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/xx2"
        android:layout_below="@+id/rl_title"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        >

        <ImageView
            android:id="@+id/iv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/img_wrong"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y50"
            android:text="@string/loading_error_anew_loading_hint2"
            android:textColor="@android:color/black"
            android:textSize="@dimen/x30"/>

    </LinearLayout>
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_title"
        android:layout_above="@+id/ll_data"
        >
    <com.scwang.smartrefresh.header.WaterDropHeader
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/x20"
            android:paddingRight="@dimen/x20">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_personal_data"

                android:layout_marginTop="@dimen/y30"
                android:background="@drawable/bg_shallow_shape"
                android:orientation="vertical"
                android:paddingBottom="@dimen/y10"
                android:paddingTop="@dimen/y10">
                <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    style="@style/SecondaryTextStyle28"
                    android:layout_marginTop="@dimen/y30"
                    android:text="@string/total_assets1"/>
                <TextView
                    android:id="@+id/tv_all_money"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_below="@+id/tv_type"
                    android:layout_marginTop="@dimen/y10"
                    android:text="0"
                    style="@style/MainTextShallowStyle36"
                    android:textSize="@dimen/x42"
                    />
                <View
                    android:id="@+id/view_centent"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_all_money"
                    android:layout_marginTop="@dimen/y20"
                    android:layout_marginLeft="@dimen/x80"
                    style="@style/SecondaryTextStyle24"
                    android:text="@string/available_assets"/>
                <TextView
                    android:id="@+id/tv_available"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_all_money"
                    android:layout_marginTop="@dimen/y20"
                    android:layout_toRightOf="@+id/tv2"
                    android:layout_marginLeft="@dimen/x10"
                    android:text="0"
                    style="@style/MainTextShallowStyle24"/>

                <TextView
                    android:id="@+id/tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_all_money"
                    android:layout_marginTop="@dimen/y20"
                    android:layout_toRightOf="@+id/view_centent"
                    android:layout_marginLeft="@dimen/x30"
                    style="@style/SecondaryTextStyle24"
                    android:text="@string/yesterday_earnings"/>
                <TextView
                    android:id="@+id/tv_yesterday_earnings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_all_money"
                    android:layout_marginTop="@dimen/y20"
                    android:layout_toRightOf="@+id/tv3"
                    android:layout_marginLeft="@dimen/x10"
                    android:text="0"
                    style="@style/BlueTextStyle24"/>
                <View
                    android:id="@+id/view1"
                    style="@style/HorizontalBoundaryStyle"
                    android:layout_below="@+id/tv2"
                    android:layout_marginTop="@dimen/y30"></View>
                <RelativeLayout
                    android:id="@+id/rl_income_breakdown"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y100"
                    android:layout_below="@+id/view1"
                    android:layout_toLeftOf="@+id/view_centent"
                    android:gravity="center"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/income_breakdown"
                        android:gravity="center"
                        android:drawablePadding="@dimen/x10"
                        android:drawableLeft="@mipmap/icon_financial_detail"
                        style="@style/MainTextShallowStyle28"/>
                </RelativeLayout>
                <View
                    style="@style/VerticalBoundaryStyle"
                    android:layout_height="@dimen/y100"
                    android:layout_toRightOf="@+id/view_centent"
                    android:layout_below="@+id/view1"></View>
                <RelativeLayout
                    android:id="@+id/rl_financial_record"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y100"
                    android:layout_below="@+id/view1"
                    android:layout_toRightOf="@+id/view_centent"
                    android:gravity="center"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/financial_record"
                        android:gravity="center"
                        android:drawablePadding="@dimen/x10"
                        android:drawableLeft="@mipmap/icon_financial_recording"
                        style="@style/MainTextShallowStyle28"/>
                </RelativeLayout>
            </RelativeLayout>
            <View
                style="@style/HorizontalBoundaryStyle"
                android:layout_marginTop="@dimen/y30"/>
            <com.bclould.tea.ui.widget.MyGridView
                android:id="@+id/my_gridview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:numColumns="2">

            </com.bclould.tea.ui.widget.MyGridView>
            <View
                style="@style/HorizontalBoundaryStyle"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y60"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_financial_licai"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/MainTextShallowStyle28"
                    android:text="@string/multi_banking"
                    android:layout_marginLeft="@dimen/x10"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/SecondaryTextStyle24"
                    android:text="@string/more_flexible_financial_benefits"
                    android:layout_marginLeft="@dimen/x10"/>
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/y30"
                />
        </LinearLayout>
    </ScrollView>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
    <LinearLayout
        android:id="@+id/ll_data"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:layout_alignParentBottom="true"
        android:background="@color/boundary_color"
        android:paddingTop="@dimen/y20"
        android:paddingBottom="@dimen/y20"
        android:paddingRight="@dimen/x30"
        android:paddingLeft="@dimen/x30"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_asset_transfer"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/x30"
            android:background="@drawable/bg_shape1"
            android:text="@string/asset_transfer"
            android:gravity="center"
            style="@style/MainTextShallowStyle24"/>
        <TextView
            android:id="@+id/tv_transfer_assets"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/bg_shape2"
            android:text="@string/transfer_assets"
            android:gravity="center"
            style="@style/MainTextShallowStyle24"/>
    </LinearLayout>
</RelativeLayout>
