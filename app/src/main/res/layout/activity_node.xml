<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg_color"
    android:orientation="vertical"
    tools:context="com.ftc.chat.ui.activity.NodeActivity">
    <RelativeLayout
        style="@style/TopNavigationBarStyle"
        android:background="@color/btn_bg_color">
        <ImageView
            android:id="@+id/bark"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="@dimen/x20"
            android:src="@mipmap/icon_nav_return"/>
        <TextView
            style="@style/MainTextShallowStyle36"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/participation_profit"/>
        <ImageView
            android:id="@+id/iv_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:src="@mipmap/icon_wenjian"
            android:paddingRight="@dimen/x30"
            android:paddingLeft="@dimen/x30"/>
    </RelativeLayout>
    <TextView
        style="@style/HorizontalBoundaryStyle"/>
    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/btn_bg_color"
                android:paddingTop="@dimen/y20"
                android:paddingBottom="@dimen/y20"
                android:paddingLeft="@dimen/x30"
                android:paddingRight="@dimen/x30">
                <TextView
                    android:id="@+id/tv_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/MainTextShallowStyle30"
                    android:text="@string/total_revenue"/>
                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/MainTextShallowStyle30"
                    android:text="@string/current_level"
                    android:layout_toRightOf="@+id/tv1"/>

                <TextView
                    android:id="@+id/tv_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/MainTextShallowStyle36"
                    android:text="0"
                    android:layout_below="@+id/tv_all"
                    android:textSize="@dimen/x45"
                    android:layout_marginTop="@dimen/y10"
                    />

                <TextView
                    android:id="@+id/tv_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/MainTextShallowStyle36"
                    android:text=""
                    android:layout_below="@+id/tv_all"
                    android:layout_marginTop="@dimen/y10"
                    android:layout_toRightOf="@+id/tv1"/>
                <ImageView
                    android:layout_width="@dimen/x60"
                    android:layout_height="@dimen/y35"
                    android:layout_below="@+id/tv_all"
                    android:src="@mipmap/icon_right"
                    android:layout_marginTop="@dimen/y10"
                    android:layout_alignParentRight="true"
                    />
                <TextView
                    android:id="@+id/tv_data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_money"
                    android:layout_marginTop="@dimen/y10"
                    style="@style/MainTextShallowStyle26"
                    android:text=""
                    android:singleLine="true"
                    />
                <RelativeLayout
                    android:id="@+id/rl_upgrade"
                    android:layout_toRightOf="@+id/tv1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_above="@+id/tv_data"></RelativeLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/y80"
                        style="@style/MainTextShallowStyle36"
                        android:gravity="bottom"
                        android:layout_marginLeft="@dimen/x60"
                        android:layout_marginBottom="@dimen/y10"
                        android:text="@string/total_performance"/>
                    <TextView
                        android:id="@+id/tv_total_performance"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/y80"
                        style="@style/BlueTextStyle36"
                        android:gravity="top"
                        android:layout_marginTop="@dimen/y10"
                        android:layout_marginLeft="@dimen/x60"
                        android:textStyle="bold"
                        android:text="0"/>
                </LinearLayout>
                <View
                    style="@style/VerticalBoundaryStyle"></View>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/y80"
                        style="@style/MainTextShallowStyle36"
                        android:gravity="bottom"
                        android:layout_marginLeft="@dimen/x60"
                        android:layout_marginBottom="@dimen/y10"
                        android:text="@string/node_revenue"/>
                    <TextView
                        android:id="@+id/tv_node_revenue"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/y80"
                        style="@style/BlueTextStyle36"
                        android:gravity="top"
                        android:layout_marginTop="@dimen/y10"
                        android:layout_marginLeft="@dimen/x60"
                        android:textStyle="bold"
                        android:text="0"/>
                </LinearLayout>
            </LinearLayout>
            <View
                style="@style/HorizontalBoundaryStyle"></View>
            <LinearLayout
                android:id="@+id/ll_advanced"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                    >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/y80"
                        style="@style/MainTextShallowStyle36"
                        android:gravity="bottom"
                        android:layout_marginLeft="@dimen/x60"
                        android:layout_marginBottom="@dimen/y10"
                        android:text="@string/super_dividend"/>
                    <TextView
                        android:id="@+id/tv_super_dividend"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/y80"
                        style="@style/BlueTextStyle36"
                        android:gravity="top"
                        android:layout_marginTop="@dimen/y10"
                        android:layout_marginLeft="@dimen/x60"
                        android:textStyle="bold"
                        android:text="0"/>
                </LinearLayout>
                <View
                    style="@style/VerticalBoundaryStyle"></View>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/y80"
                        style="@style/MainTextShallowStyle36"
                        android:gravity="bottom"
                        android:layout_marginLeft="@dimen/x60"
                        android:layout_marginBottom="@dimen/y10"
                        android:text="@string/main_node_dividend"/>
                    <TextView
                        android:id="@+id/tv_main_node"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/y80"
                        style="@style/BlueTextStyle36"
                        android:gravity="top"
                        android:layout_marginTop="@dimen/y10"
                        android:layout_marginLeft="@dimen/x60"
                        android:textStyle="bold"
                        android:text="0"/>
                </LinearLayout>
            </LinearLayout>
            <android.support.design.widget.TabLayout
                android:id="@+id/tl_tab"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y100"
                >

            </android.support.design.widget.TabLayout>

            <android.support.v4.view.ViewPager
                android:id="@+id/vp_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </android.support.v4.view.ViewPager>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
