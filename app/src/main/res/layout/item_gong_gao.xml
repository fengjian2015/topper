<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/y400"
              android:layout_marginTop="@dimen/y20"
              android:background="@color/white"
              android:gravity="center"
              android:orientation="vertical">

    <ImageView
        android:layout_width="@dimen/x60"
        android:layout_height="@dimen/y60"
        android:src="@mipmap/img_biyunguanjia_bg"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y10"
        android:text="币云管家"
        android:textColor="@color/black"
        android:textSize="@dimen/x28"/>

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y10"
        android:text="9分钟前"
        android:textColor="@color/gray"
        android:textSize="@dimen/x18"/>

    <FrameLayout
        android:layout_width="@dimen/x611"
        android:layout_height="@dimen/y176"
        android:layout_marginTop="@dimen/y20"
        android:background="@mipmap/bgborder_notice_news"
        android:paddingBottom="@dimen/y20"
        android:paddingLeft="@dimen/x30"
        android:paddingRight="@dimen/x30"
        android:paddingTop="@dimen/y20">

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="75"
            android:text="消息消息消息消息消息消息消息消息消息消息消息消息消息消息消息消息消息消息消息消息消息消息消息消息消息消息消息消息消息消息消息消息消消息..."
            android:textColor="@color/black"
            android:textSize="@dimen/x26"/>


    </FrameLayout>


</LinearLayout>