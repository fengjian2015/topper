<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:ngl="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

    <LinearLayout
        android:id="@+id/ll_dynamic_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_touxiang"
            android:layout_width="@dimen/x100"
            android:layout_height="@dimen/x100"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginTop="@dimen/y30"
            android:src="@mipmap/img_nfriend_headshot1"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginTop="@dimen/y30"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="安子"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="@dimen/x32"/>

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_name"
                android:layout_marginTop="@dimen/y10"
                android:text="2017.09.28  11:00"
                android:textColor="@color/gray"
                android:textSize="@dimen/x20"/>

            <ImageView
                android:id="@+id/iv_delete"
                android:layout_width="@dimen/x60"
                android:layout_height="@dimen/x40"
                android:paddingRight="@dimen/x20"
                android:layout_alignParentRight="true"
                android:src="@mipmap/ico_dy_delete"/>

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_time"
                android:layout_marginRight="@dimen/x30"
                android:layout_marginTop="@dimen/y10"
                android:textColor="@color/black"
                android:textSize="@dimen/x30"/>

            <com.jaeger.ninegridimageview.NineGridImageView
                android:id="@+id/ngl_images"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_content"
                android:layout_marginRight="@dimen/x20"
                android:layout_marginTop="@dimen/y20"
                ngl:imgGap="@dimen/x10"
                ngl:showStyle="fill"
                ngl:singleImgSize="@dimen/x360"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y100"
                android:layout_below="@+id/ngl_images"
                android:layout_marginRight="@dimen/x30"
                android:gravity="right|center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_reward"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableLeft="@mipmap/ico_dy_give"
                    android:drawablePadding="@dimen/x10"
                    android:gravity="center"
                    android:paddingLeft="@dimen/x20"
                    android:paddingRight="@dimen/x20"
                    android:text="0"
                    android:textSize="@dimen/x30"/>

                <TextView
                    android:id="@+id/tv_pinglun"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableLeft="@drawable/pinglun_selector"
                    android:drawablePadding="@dimen/x10"
                    android:gravity="center"
                    android:paddingLeft="@dimen/x20"
                    android:paddingRight="@dimen/x20"
                    android:text="0"
                    android:textSize="@dimen/x30"/>


                <TextView
                    android:id="@+id/tv_zan"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableLeft="@drawable/zan_selector"
                    android:drawablePadding="@dimen/x10"
                    android:gravity="center"
                    android:paddingLeft="@dimen/x20"
                    android:paddingRight="@dimen/x20"
                    android:text="0"
                    android:textSize="@dimen/x30"/>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_review"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_dynamic_content"
        android:layout_marginBottom="@dimen/y30"
        android:layout_marginLeft="@dimen/x100"
        android:background="#F7F7F7"
        android:orientation="vertical"
        android:padding="@dimen/y20"
        android:visibility="gone">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>

        <TextView
            android:id="@+id/tv_look"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/y15"
            android:text="@string/view_more"
            android:textColor="@color/blue2"
            android:textSize="@dimen/x28"
            android:textStyle="bold"/>

    </LinearLayout>

    <TextView
        style="@style/HCutOffRule"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>