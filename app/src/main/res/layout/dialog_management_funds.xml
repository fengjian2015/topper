<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/x600"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_shape"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/tv_title"
            style="@style/MainTextDeepStyle36"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y130"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            />

        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/x44"
            android:layout_height="@dimen/y44"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tv_title"
            android:layout_marginRight="@dimen/x10"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:background="@color/blue2"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/x40"
        android:paddingRight="@dimen/x40"
        android:paddingTop="@dimen/y50"
        android:paddingBottom="@dimen/y50">
        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/MainTextDeepStyle24"
            android:text="@string/input_quantity"
            android:layout_marginLeft="@dimen/x10"
            />
        <RelativeLayout
            android:id="@+id/rl_data"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y80"
            android:layout_below="@+id/tv1"
            android:background="@drawable/bg_shape3"
            android:layout_marginTop="@dimen/y20">
            <EditText
                android:id="@+id/et_money"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="center_vertical"
                style="@style/MainTextDeepStyle30"
                android:paddingLeft="@dimen/x30"
                android:singleLine="true"
                android:paddingRight="@dimen/x30"
                android:inputType="numberDecimal"
                android:layout_toLeftOf="@+id/tv_conin"
                />
            <TextView
                android:id="@+id/tv_conin"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center"
                style="@style/MainTextDeepStyle30"
                android:layout_marginRight="@dimen/x30"
                android:text="FTC"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/MainTextDeepStyle24"
            android:text="@string/quantity_available"
            android:layout_marginLeft="@dimen/x10"
            android:layout_below="@+id/rl_data"
            android:layout_marginTop="@dimen/x20"
            />
        <TextView
            android:id="@+id/tv_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_data"
            android:layout_marginTop="@dimen/x20"
            android:layout_alignParentRight="true"
            style="@style/MainTextDeepStyle24"
            android:text=""
            />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:background="@color/gray" />


    <Button
        android:id="@+id/btn_confirm"
        style="@style/BlueTextStyle36"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y130"
        android:background="@android:color/transparent"
        android:text="@string/confirm" />


</LinearLayout>