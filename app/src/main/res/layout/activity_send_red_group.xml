<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/redpacket4">

        <ImageView
            android:id="@+id/bark"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="@dimen/x20"
            android:src="@mipmap/icon_nav_return"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/send_red_packet"
            android:textColor="@color/white"
            android:textSize="@dimen/x32"/>

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">
        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginRight="@dimen/x30"
            android:layout_marginTop="@dimen/y30"
            app:cardCornerRadius="@dimen/x20">

            <RelativeLayout
                android:id="@+id/rl_selector_currency"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y120">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x20"
                    android:text="@string/selected_currency"
                    android:textColor="@color/black"
                    android:textSize="@dimen/x30"/>

                <TextView
                    android:id="@+id/tv_currency"
                    android:layout_width="@dimen/x100"
                    android:layout_height="@dimen/y50"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="11dp"
                    android:layout_marginRight="11dp"
                    android:layout_toLeftOf="@+id/iv"
                    android:layout_toStartOf="@+id/iv"
                    android:background="@drawable/bg_register_shape"
                    android:gravity="center"
                    android:text="TPC" />

                <ImageView
                    android:id="@+id/iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/x30"
                    android:src="@mipmap/icon_transfer_down_default"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginRight="@dimen/x30"
            android:layout_marginTop="@dimen/y30"
            app:cardCornerRadius="@dimen/x20">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y120">
                <TextView
                    android:id="@+id/tv_money_state"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/total_money"
                    android:textColor="@color/black"
                    android:textSize="@dimen/x30"
                    android:layout_marginLeft="@dimen/x20"/>
                <EditText
                    android:id="@+id/et_money"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/tv"
                    android:background="@android:color/transparent"
                    android:textCursorDrawable="@null"
                    android:hint="@string/pless_input_money"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:inputType="numberDecimal"
                    android:layout_toStartOf="@+id/tv1"
                    android:gravity="right|center_vertical"
                    android:paddingLeft="@dimen/x20"
                    android:paddingRight="@dimen/x20"
                    android:textSize="@dimen/x30"/>

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x5"
                    android:layout_marginRight="@dimen/x30"
                    android:textColor="@color/black"
                    android:text="個"
                    android:textSize="@dimen/x30"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>
        <TextView
            android:id="@+id/tv_change_red"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/gray3"
            android:textSize="@dimen/x26"
            android:text="@string/lucky_red_common_red"
            android:layout_marginLeft="@dimen/x50"
            android:layout_marginTop="@dimen/y5"/>
        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginRight="@dimen/x30"
            android:layout_marginTop="@dimen/y30"
            app:cardCornerRadius="@dimen/x20">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y120">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/number_of_red_packets"
                    android:textColor="@color/black"
                    android:textSize="@dimen/x30"
                    android:layout_marginLeft="@dimen/x20"/>

                <EditText
                    android:id="@+id/et_number"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/tv"
                    android:background="@android:color/transparent"
                    android:hint="@string/et_number"
                    android:inputType="number"
                    android:layout_toStartOf="@+id/tv2"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:paddingLeft="@dimen/x20"
                    android:gravity="right|center_vertical"
                    android:textCursorDrawable="@null"
                    android:paddingRight="@dimen/x20"
                    android:textSize="@dimen/x30"/>

                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x5"
                    android:layout_marginRight="@dimen/x30"
                    android:textColor="@color/black"
                    android:text="個"
                    android:textSize="@dimen/x30"/>

            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <TextView
            android:id="@+id/tv_group_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/gray3"
            android:textSize="@dimen/x26"
            android:text="群員"
            android:layout_marginLeft="@dimen/x50"
            android:layout_marginTop="@dimen/y5"/>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginRight="@dimen/x30"
            android:layout_marginTop="@dimen/y30"
            app:cardCornerRadius="@dimen/x20">

            <EditText
                android:id="@+id/et_remark"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y120"
                android:singleLine="true"
                android:background="@android:color/transparent"
                android:hint="@string/congratulation"
                android:paddingLeft="@dimen/x20"
                android:paddingRight="@dimen/x20"
                android:textSize="@dimen/x30"/>

        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/btn_send"
            android:layout_width="@dimen/x450"
            android:layout_height="@dimen/y80"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/y80"
            android:background="@drawable/bg_red_shape"
            android:text="@string/btn_text_send"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/y30"
            android:text="@string/send_red_packet_hint"
            android:textSize="@dimen/x26"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_error"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_ununited"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/img_wrong"/>

        <TextView
            android:layout_marginTop="@dimen/y50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loading_error_anew_loading_hint2"
            android:textColor="@android:color/black"
            android:textSize="@dimen/x30"/>

    </LinearLayout>

</LinearLayout>