<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/y30">
        <TextView
            android:id="@+id/tv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/MainTextShallowStyle36"
            android:text="@string/get_direct_rewards"/>
        <TextView
            android:id="@+id/tv_out_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="-390TPC"
            style="@style/BlueTextStyle36"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/MainTextShallowStyle32"
        android:text="提币-等待中"/>
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/SecondaryTextStyle24"
        android:layout_marginTop="@dimen/y10"
        android:text="2018-12-31"/>
    <View
        style="@style/HorizontalBoundaryStyle"
        android:layout_marginTop="@dimen/y30"/>
</LinearLayout>