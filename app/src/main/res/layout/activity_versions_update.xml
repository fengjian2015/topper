<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/shallow_gray"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:background="@color/white">

        <ImageView
            android:id="@+id/bark"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="@dimen/x20"
            android:src="@mipmap/icon_nav_return"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/version_updating"
            android:textColor="@color/black"
            android:textSize="@dimen/x32"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/xx"
        style="@style/HCutOffRule"
        android:layout_below="@+id/rl_title"/>


    <RelativeLayout
        android:id="@+id/rl_data"
        android:visibility="gone"
        android:layout_below="@+id/xx"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_apk_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y30"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_new_update"
                android:layout_width="@dimen/x80"
                android:layout_height="@dimen/y40"
                android:layout_marginLeft="@dimen/x20"
                android:layout_toRightOf="@+id/tv"
                android:background="@drawable/bg_new_update"
                android:gravity="center"
                android:text="New"
                android:textColor="@color/white"
                android:textSize="@dimen/x28"/>

            <TextView
                android:id="@+id/tv_app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x20"
                android:text="TopperChat"
                android:textColor="@color/black"
                android:textSize="@dimen/x40"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_new_versions_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x20"
                android:text="v0.66"
                android:textSize="@dimen/x26"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_apk_name"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x20"
            android:layout_marginTop="@dimen/y40"
            android:textColor="@color/black"
            android:textSize="@dimen/x32"/>

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_no_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/y200"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y100"
            android:text="@string/already_new_version"
            android:textSize="@dimen/x32"/>

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/rl_update"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y15"
                android:layout_above="@+id/tv_progress"
                android:layout_marginLeft="@dimen/x20"
                android:layout_marginRight="@dimen/x20"
                android:layout_marginTop="@dimen/y20"
                android:progressDrawable="@drawable/bg_progress_bar"/>

            <TextView
                android:id="@+id/tv_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/rl_btn"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/y10"
                android:textSize="@dimen/x26"/>

            <RelativeLayout
                android:id="@+id/rl_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/y200"
                android:layout_marginTop="@dimen/y60">

                <Button
                    android:id="@+id/btn_download"
                    android:layout_width="@dimen/x500"
                    android:layout_height="@dimen/y80"
                    android:background="@drawable/btn_blue_selector"
                    android:text="@string/download"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/x32"
                    android:visibility="visible"/>

                <Button
                    android:id="@+id/btn_stop"
                    android:layout_width="@dimen/x500"
                    android:layout_height="@dimen/y80"
                    android:background="@drawable/btn_blue_selector"
                    android:text="@string/stop"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/x32"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/btn_finish"
                    android:layout_width="@dimen/x500"
                    android:layout_height="@dimen/y80"
                    android:background="@drawable/btn_blue_selector"
                    android:text="@string/install"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/x32"
                    android:visibility="gone"/>

            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_below="@+id/xx"
        android:id="@+id/ll_error"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/img_wrong"/>

        <TextView
            android:layout_marginTop="@dimen/y50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loading_error_anew_loading_hint2"
            android:textColor="@android:color/black"
            android:textSize="@dimen/x30"/>

    </LinearLayout>

</RelativeLayout>