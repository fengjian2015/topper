<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#EBEFF5"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:background="@color/white">

        <ImageView
            android:id="@+id/bark"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="@dimen/x20"
            android:src="@mipmap/icon_nav_return"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="购买BTC"
            android:textColor="@color/black"
            android:textSize="@dimen/x32"/>

        <TextView
            android:id="@+id/tv_help"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:paddingRight="@dimen/x20"
            android:text="帮助"
            android:textColor="@color/blue2"
            android:textSize="@dimen/x30"/>

    </RelativeLayout>

    <TextView
        style="@style/HCutOffRule"/>

    <LinearLayout
        android:id="@+id/ll_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="@dimen/y15"
        android:paddingLeft="@dimen/x20"
        android:paddingRight="@dimen/x20"
        android:paddingTop="@dimen/y15">

        <RelativeLayout
            android:id="@+id/rl_order_intro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/y15">

            <TextView
                android:id="@+id/tv_order_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单号：1318235"
                android:textColor="@color/bar_grey"
                android:textSize="@dimen/x28"/>

            <TextView
                android:id="@+id/tv_pay_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="等待支付"
                android:textColor="#FE6633"
                android:textSize="@dimen/x28"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_order_number"
                android:layout_marginTop="@dimen/y15"
                android:text="卖家安子的交易广告：fsd456jfslakf4564"
                android:textSize="@dimen/x24"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_order_number"
                android:layout_marginTop="@dimen/y15"
                android:layout_toLeftOf="@+id/tv_time"
                android:text="剩余"
                android:textColor="@color/bar_grey"
                android:textSize="@dimen/x24"/>

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv"
                android:layout_below="@+id/tv_order_number"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginRight="@dimen/x10"
                android:layout_marginTop="@dimen/y15"
                android:layout_toLeftOf="@+id/tv"
                android:text="28"
                android:textColor="@color/black"
                android:textSize="@dimen/x26"/>

            <TextView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tv_order_number"
                android:layout_marginTop="@dimen/y15"
                android:text="分钟"
                android:textColor="@color/bar_grey"
                android:textSize="@dimen/x24"/>

        </RelativeLayout>

        <TextView
            style="@style/HCutOffRule"
            android:layout_marginBottom="@dimen/y15"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="交易金额(CNY)"
                android:textSize="@dimen/x26"/>

            <TextView
                android:id="@+id/tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="1000"
                android:textColor="@android:color/black"
                android:textSize="@dimen/x26"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y15">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="交易数量(BTC)"
                android:textSize="@dimen/x26"/>

            <TextView
                android:id="@+id/tv_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="0.5"
                android:textColor="@android:color/black"
                android:textSize="@dimen/x26"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/y15"
            android:layout_marginTop="@dimen/y15">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="交易价格(CNY)"
                android:textSize="@dimen/x26"/>

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="124562"
                android:textColor="@android:color/black"
                android:textSize="@dimen/x26"/>

        </RelativeLayout>

        <TextView
            style="@style/HCutOffRule"/>

        <TextView
            android:id="@+id/tv_buysell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y15"
            android:text="卖家：安子"
            android:textColor="@color/bar_grey"
            android:textSize="@dimen/x28"/>

        <TextView
            android:id="@+id/tv_remark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y15"
            android:text="备注：先钱后币，非诚勿扰"
            android:textColor="@color/bar_grey"
            android:textSize="@dimen/x24"/>


        <TextView
            style="@style/HCutOffRule"
            android:layout_marginTop="@dimen/y15"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/y15"
            android:layout_marginTop="@dimen/y15"
            android:text="付款方式："
            android:textColor="@color/bar_grey"
            android:textSize="@dimen/x28"/>

        <RelativeLayout
            android:id="@+id/rl_bank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_bank"
                android:layout_width="@dimen/x90"
                android:layout_height="@dimen/x90"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x20"
                android:src="@mipmap/img_bankcard"/>

            <TextView
                android:id="@+id/tv_bank_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_bank"
                android:text="安子"
                android:textColor="@color/bar_grey_90"
                android:textSize="@dimen/x24"/>

            <TextView
                android:id="@+id/tv_bank_site"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_bank_name"
                android:layout_marginTop="@dimen/y5"
                android:layout_toRightOf="@+id/iv_bank"
                android:text="中国建设银行 大亚湾支行"
                android:textColor="@color/bar_grey_90"
                android:textSize="@dimen/x24"/>

            <TextView
                android:id="@+id/tv_bank_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_bank_site"
                android:layout_marginTop="@dimen/y5"
                android:layout_toRightOf="@+id/iv_bank"
                android:text="6217995546245605689"
                android:textColor="@color/bar_grey_90"
                android:textSize="@dimen/x24"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_alipay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y10">

            <ImageView
                android:id="@+id/iv_alipay"
                android:layout_width="@dimen/x90"
                android:layout_height="@dimen/x90"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x20"
                android:src="@mipmap/img_alipay"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_alipay"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_alipay_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="安子"
                    android:textColor="@color/bar_grey_90"
                    android:textSize="@dimen/x24"/>

                <TextView
                    android:id="@+id/tv_alipay_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_alipay_name"
                    android:layout_marginTop="@dimen/y5"
                    android:text="18317964322"
                    android:textColor="@color/bar_grey_90"
                    android:textSize="@dimen/x24"/>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_wechat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y10">

            <ImageView
                android:id="@+id/iv_wechat"
                android:layout_width="@dimen/x90"
                android:layout_height="@dimen/x90"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x20"
                android:src="@mipmap/we_chat"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_wechat"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_wechat_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="安子"
                    android:textColor="@color/bar_grey_90"
                    android:textSize="@dimen/x24"/>

                <TextView
                    android:id="@+id/tv_wechat_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_alipay_name"
                    android:layout_marginTop="@dimen/y5"
                    android:text="18317964322"
                    android:textColor="@color/bar_grey_90"
                    android:textSize="@dimen/x24"/>

            </LinearLayout>

        </RelativeLayout>

        <TextView
            style="@style/HCutOffRule"
            android:layout_marginTop="@dimen/y15"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y60"
            android:layout_marginTop="@dimen/y15">

            <TextView
                android:id="@+id/tv_buysell2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="买家：安子"
                android:textColor="@color/bar_grey"
                android:textSize="@dimen/x28"/>

            <LinearLayout
                android:id="@+id/ll_seller"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                android:visibility="visible">

                <Button
                    android:id="@+id/btn_cancel_order2"
                    android:layout_width="@dimen/x150"
                    android:layout_height="@dimen/y58"
                    android:layout_marginRight="@dimen/x20"
                    android:background="@drawable/bg_tixian_shape"
                    android:text="取消订单"
                    android:textColor="@color/white"
                    android:textSize="@dimen/x24"/>

                <Button
                    android:id="@+id/btn_confirm_send_coin"
                    android:layout_width="@dimen/x150"
                    android:layout_height="@dimen/y58"
                    android:background="@drawable/bg_blue_shape"
                    android:text="确认放币"
                    android:textColor="@color/white"
                    android:textSize="@dimen/x24"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_buyer"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                android:visibility="gone">

                <Button
                    android:id="@+id/btn_cancel_order"
                    android:layout_width="@dimen/x150"
                    android:layout_height="@dimen/y58"
                    android:layout_marginRight="@dimen/x20"
                    android:background="@drawable/bg_tixian_shape"
                    android:text="取消订单"
                    android:textColor="@color/white"
                    android:textSize="@dimen/x24"/>

                <Button
                    android:id="@+id/btn_confirm_pay"
                    android:layout_width="@dimen/x150"
                    android:layout_height="@dimen/y58"
                    android:background="@drawable/bg_blue_shape"
                    android:text="确认付款"
                    android:textColor="@color/white"
                    android:textSize="@dimen/x24"/>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <TextView
        style="@style/HCutOffRule"
        android:layout_alignParentBottom="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/y10"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginTop="@dimen/y15"
        android:text="交易提示："
        android:textColor="@color/bar_grey_90"
        android:textSize="@dimen/x28"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:text="1、您的汇款将直接进入卖家账号，交易过程中卖家出售的数字资产将由平台托管；"
        android:textSize="@dimen/x24"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:layout_marginTop="@dimen/y5"
        android:text="2、请在规定时间内完成付款，并务必点击”确认付款“，卖家确认收款后，系统会将数字资产划转至您的账户；"
        android:textSize="@dimen/x24"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:layout_marginTop="@dimen/y5"
        android:text="3、请勿频繁取消订单，否则将导致限制交易；"
        android:textSize="@dimen/x24"/>


</LinearLayout>