<?xml version="1.0" encoding="utf-8"?>
<com.scwang.smartrefresh.layout.SmartRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/refresh_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/y80"
            android:layout_marginBottom="@dimen/y20"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x20"
            android:layout_marginTop="@dimen/y20">

            <LinearLayout
                android:id="@+id/ll_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/light"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_friend_seek"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x20"
                    android:text="搜索用户昵称或者ID"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/x28"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y20"
                    android:background="@color/light"/>

                <RelativeLayout
                    android:id="@+id/news_friend"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y100"
                    android:layout_marginLeft="@dimen/x20"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv"
                        android:layout_width="@dimen/x60"
                        android:layout_centerVertical="true"
                        android:layout_height="@dimen/x60"
                        android:src="@mipmap/icon_friend_newfriend"/>

                    <TextView
                        android:layout_toRightOf="@+id/iv"
                        android:layout_width="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x20"
                        android:text="新的好友"
                        android:textColor="@color/black"
                        android:textSize="@dimen/x32"/>

                    <TextView
                        android:id="@+id/number"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/x35"
                        android:layout_alignBottom="@+id/tab1_item_text"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/x20"
                        android:background="@drawable/bg_add_card_shape"
                        android:gravity="center"
                        android:paddingLeft="@dimen/x15"
                        android:paddingRight="@dimen/x15"
                        android:text="99+"
                        android:textColor="#FFF"
                        android:visibility="gone"
                        android:textSize="@dimen/x26"/>

                </RelativeLayout>

                <TextView
                    style="@style/HCutOffRule"/>

                <LinearLayout
                    android:id="@+id/my_group"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y100"
                    android:layout_marginLeft="@dimen/x20"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/x60"
                        android:layout_height="@dimen/x60"
                        android:src="@mipmap/icon_friend_groups"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x20"
                        android:text="我的群组"
                        android:textColor="@color/black"
                        android:textSize="@dimen/x32"/>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y80"
                    android:background="@color/light"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/x20"
                    android:text="我的好友"
                    android:textColor="@color/black"
                    android:textSize="@dimen/x28"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:descendantFocusability="beforeDescendants"
                    android:fastScrollEnabled="false">
                </android.support.v7.widget.RecyclerView>

            </LinearLayout>

    </LinearLayout>

</com.scwang.smartrefresh.layout.SmartRefreshLayout>