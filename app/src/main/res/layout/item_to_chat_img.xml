<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/x20">

    <ImageView
        android:id="@+id/iv_touxiang"
        android:layout_width="@dimen/x80"
        android:layout_height="@dimen/x80"
        android:layout_alignParentRight="true"
        android:scaleType="fitXY"
        android:src="@mipmap/img_nfriend_headshot1"/>

    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x20"
        android:layout_toRightOf="@+id/iv_touxiang"
        android:adjustViewBounds="true"
        android:maxHeight="@dimen/y800"
        android:maxWidth="@dimen/x480"
        android:scaleType="centerInside"/>

    <ImageView
        android:id="@+id/iv_warning"
        android:layout_width="@dimen/x60"
        android:layout_height="@dimen/x60"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/x20"
        android:layout_toLeftOf="@+id/iv_img"
        android:src="@mipmap/icon_fail"
        android:visibility="visible"/>

    <ImageView
        android:id="@+id/iv_load"
        android:layout_width="@dimen/x60"
        android:layout_height="@dimen/x60"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/x20"
        android:layout_toLeftOf="@+id/iv_img"
        android:background="@drawable/anim_progress"
        android:visibility="visible"/>

</RelativeLayout>