<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_four_bg"
    android:orientation="vertical"
    android:padding="@dimen/x20">

    <TextView
        android:id="@+id/tv_regulation_statement"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/y15"
        android:layout_weight="1"
        android:drawableLeft="@mipmap/icon_pay_c"
        android:gravity="center"
        android:text="@string/regulation_statement"
        android:textColor="@android:color/black"
        android:textSize="@dimen/x28"/>

    <TextView
        android:id="@+id/tv_guess_record"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:drawableLeft="@mipmap/icon_get_c"
        android:gravity="center"
        android:text="@string/guess_record"
        android:textColor="@android:color/black"
        android:textSize="@dimen/x28"/>

</LinearLayout>