<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y550"
        android:background="@mipmap/bg_img_friend"
        android:fitsSystemWindows="true">


        <ImageView
            android:padding="@dimen/x20"
            android:id="@+id/bark"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginTop="@dimen/y40"
            android:src="@mipmap/icon_where_renturn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/y310"
            app:cardElevation="@dimen/x5"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/y50"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x20"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="@dimen/x20">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/touxiang"
                        android:layout_width="@dimen/x110"
                        android:layout_height="@dimen/x110"
                        android:layout_marginLeft="@dimen/x48"
                        android:layout_marginTop="@dimen/y40"
                        android:src="@mipmap/img_nfriend_headshot1"/>

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x30"
                        android:layout_marginTop="@dimen/y50"
                        android:layout_toRightOf="@+id/touxiang"
                        android:text="安子"
                        android:textColor="@color/black"
                        android:textSize="@dimen/x32"/>

                    <ImageView
                        android:id="@+id/gender"
                        android:layout_width="@dimen/x20"
                        android:layout_height="@dimen/x20"
                        android:layout_marginLeft="@dimen/x20"
                        android:layout_marginTop="@dimen/y60"
                        android:layout_toRightOf="@+id/name"
                        android:src="@mipmap/icon_nfriend_boys"/>

                    <TextView
                        android:id="@+id/id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/name"
                        android:layout_marginLeft="@dimen/x30"
                        android:layout_marginTop="@dimen/y20"
                        android:layout_toRightOf="@+id/touxiang"
                        android:text="ID:33446"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/x24"/>

                    <TextView
                        android:id="@+id/attention"
                        android:layout_width="@dimen/x120"
                        android:layout_height="@dimen/y60"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/x40"
                        android:layout_marginTop="@dimen/y70"
                        android:background="@drawable/bg_buysell_shape"
                        android:gravity="center"
                        android:text="@string/attention"
                        android:textColor="@color/blue2"
                        android:textSize="@dimen/x26"/>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/guanzhu_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x48"
                        android:layout_marginTop="@dimen/y30"
                        android:text="1234"
                        android:textColor="@color/black"
                        android:textSize="@dimen/x26"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x10"
                        android:layout_marginTop="@dimen/y30"
                        android:text="@string/attention"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/x26"/>

                    <TextView
                        android:id="@+id/fans"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x30"
                        android:layout_marginTop="@dimen/y30"
                        android:text="5641"
                        android:textColor="@color/black"
                        android:textSize="@dimen/x26"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x10"
                        android:layout_marginTop="@dimen/y30"
                        android:text="@string/fans"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/x26"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x48"
                        android:layout_marginTop="@dimen/y30"
                        android:text="@string/signature"
                        android:textColor="@color/black"
                        android:textSize="@dimen/x26"/>

                    <TextView
                        android:id="@+id/qianming"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x10"
                        android:layout_marginTop="@dimen/y30"
                        android:maxLength="11"
                        android:text="心已决堤，泪如潮水。愿"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/x26"/>


                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y120"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ta_dynamic"
                android:textColor="@drawable/text_blue_selector"
                android:textSize="@dimen/x32"/>

            <TextView
                android:id="@+id/xx"
                android:layout_width="@dimen/x135"
                android:layout_height="@dimen/y3"
                android:layout_marginTop="@dimen/y6"
                android:background="@color/blue2"
                android:visibility="invisible"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x120"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/regard_ta"
                android:textColor="@drawable/text_blue_selector"
                android:textSize="@dimen/x32"/>

            <TextView
                android:id="@+id/xx2"
                android:layout_width="@dimen/x105"
                android:layout_height="@dimen/y3"
                android:layout_marginTop="@dimen/y6"
                android:background="@color/blue2"
                android:visibility="invisible"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        style="@style/HCutOffRule"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y570">
    </android.support.v4.view.ViewPager>

    <TextView
        style="@style/HCutOffRule"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:layout_above="@+id/viewPager"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:gravity="center">

        <Button
            android:id="@+id/send_message"
            android:layout_width="@dimen/x450"
            android:layout_height="@dimen/y80"
            android:background="@drawable/bg_tixian_shape"
            android:text="发消息"
            android:textColor="@color/white"
            android:textSize="@dimen/x32"/>

    </LinearLayout>

</LinearLayout>