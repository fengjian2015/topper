<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/light"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:background="@color/white">

        <ImageView
            android:id="@+id/bark"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="@dimen/x20"
            android:src="@mipmap/icon_nav_return"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="验证码"
            android:textColor="@color/black"
            android:textSize="@dimen/x32"/>

    </RelativeLayout>

    <TextView
        style="@style/HCutOffRule"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y50"
        android:gravity="center"
        android:text="验证码已发送至手机"
        android:textColor="@color/black"
        android:textSize="@dimen/x28"/>

    <TextView
        android:id="@+id/phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="+86 183****4322"
        android:textColor="@color/black"
        android:textSize="@dimen/x28"/>


    <com.bclould.tocotalk.ui.widget.InputCodeLayout
        android:id="@+id/inputCodeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y20"
        android:gravity="center"
        app:icl_divideWidth="@dimen/x20"
        app:icl_focusBackground="@drawable/bg_verify_shape"
        app:icl_height="@dimen/x85"
        app:icl_number="6"
        app:icl_showMode="normal"
        app:icl_textColor="@color/black"
        app:icl_textSize="@dimen/x28"
        app:icl_unFocusBackground="@drawable/bg_verify_shape"
        app:icl_width="@dimen/x85"/>

    <TextView
        android:id="@+id/anew_send"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/y80"
        android:layout_gravity="center_horizontal"
        android:gravity="bottom"
        android:text="重新发送  60s  >>"
        android:textColor="@color/blue"
        android:textSize="@dimen/x28"/>

    <TextView
        android:layout_width="@dimen/x215"
        android:layout_height="@dimen/y1"
        android:layout_gravity="center_horizontal"
        android:background="@color/blue"/>

    <Button
        android:id="@+id/btn_next"
        android:layout_width="@dimen/x450"
        android:layout_height="@dimen/y80"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y60"
        android:background="@drawable/bg_next_shape"
        android:text="下一步"
        android:textColor="@color/white"/>


</LinearLayout>