<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/shallow_gray"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:background="@color/white">

        <ImageView
            android:id="@+id/bark"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="@dimen/x20"
            android:src="@mipmap/icon_nav_return"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/dynamic_uploading"
            android:textColor="@color/black"
            android:textSize="@dimen/x32"/>

    </RelativeLayout>

    <View style="@style/HCutOffRule"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y266"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_img"
            android:layout_width="@dimen/x266"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/y20"
            android:layout_marginRight="@dimen/x20"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginTop="@dimen/y20"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/tv_count"
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/x40"
            android:layout_alignBottom="@+id/iv_img"
            android:layout_alignRight="@+id/iv_img"
            android:layout_marginBottom="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:background="@drawable/bg_gray_oval"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="@dimen/x28"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_img"
            android:layout_marginTop="@dimen/y40"
            android:layout_toRightOf="@+id/iv_img"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/publish_dynamic"
            android:textColor="@color/black"
            android:textSize="@dimen/x32"/>

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y15"
            android:layout_alignBottom="@+id/iv_img"
            android:layout_marginBottom="@dimen/y40"
            android:layout_marginRight="@dimen/x20"
            android:layout_toRightOf="@+id/iv_img"
            android:progressDrawable="@drawable/bg_progress_bar"/>

    </RelativeLayout>

    <View style="@style/HCutOffRule"></View>

</LinearLayout>