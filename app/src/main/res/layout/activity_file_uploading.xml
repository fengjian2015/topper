<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg_color"
    android:orientation="vertical">

    <RelativeLayout
        style="@style/TopNavigationBarStyle">

        <ImageView
            android:id="@+id/bark"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="@dimen/x20"
            android:src="@mipmap/icon_nav_return"/>

        <TextView
            style="@style/MainTextShallowStyle36"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/dynamic_uploading"/>

    </RelativeLayout>

    <View style="@style/HorizontalBoundaryStyle"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y266"
        android:background="@color/app_bg_color">

        <ImageView
            android:id="@+id/iv_img"
            android:layout_width="@dimen/x266"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/y20"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x20"
            android:layout_marginTop="@dimen/y20"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/tv_count"
            style="@style/SecondaryTextStyle24"
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/x40"
            android:layout_alignBottom="@+id/iv_img"
            android:layout_alignRight="@+id/iv_img"
            android:layout_marginBottom="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:background="@drawable/bg_gray_oval"
            android:gravity="center"
            android:text="1"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/iv_img"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                style="@style/MainTextShallowStyle30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/publish_dynamic"/>

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y15"
                android:layout_marginRight="@dimen/x20"
                android:layout_marginTop="@dimen/y40"
                android:progressDrawable="@drawable/bg_progress_bar"/>

            <TextView
                android:id="@+id/tv_progress"
                style="@style/MainTextShallowStyle30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y40"
                android:text="0%"/>

        </LinearLayout>

    </RelativeLayout>

    <View style="@style/HorizontalBoundaryStyle"></View>

</LinearLayout>