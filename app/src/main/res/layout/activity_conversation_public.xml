<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg_color"
    android:orientation="vertical"
    tools:context="com.bclould.tea.ui.activity.ConversationPublicActivity">

    <LinearLayout
        android:id="@+id/ll_chat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/view"
        android:clickable="false"
        android:focusable="false"
        android:orientation="vertical">
        <include
            android:id="@+id/rl_title"
            layout="@layout/activity_top"/>
        <com.meitu.scanimageview.ScanPhotoView
            android:id="@+id/iv_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            />

        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.scwang.smartrefresh.header.MaterialHeader
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/light"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/light">

            </android.support.v7.widget.RecyclerView>

            <!--<com.bclould.tea.ui.widget.LoadMoreListView-->
            <!--android:id="@+id/lv_message"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:background="@color/light"-->
            <!--android:divider="@null">-->
            <!--</com.bclould.tea.ui.widget.LoadMoreListView>-->

        </com.scwang.smartrefresh.layout.SmartRefreshLayout>
    </LinearLayout>

    <View
        android:id="@+id/view"
        style="@style/HorizontalBoundaryStyle"
        android:layout_above="@+id/rl_bottom"></View>
    <RelativeLayout
        android:id="@+id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:layout_alignParentBottom="true">
        <ImageView
            android:id="@+id/iv_keyboard"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/public_keyboard"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/x20"
            android:background="@color/boundary_color"
            android:paddingRight="@dimen/x20"/>
        <View
            android:id="@+id/view_line"
            style="@style/VerticalDeepBoundaryStyle"
            android:layout_toRightOf="@+id/iv_keyboard"/>
        <com.bclould.tea.ui.widget.MenuLinearLayout
            android:id="@+id/ll_menu"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y100"
            android:background="@color/boundary_color"
            android:layout_toRightOf="@+id/view_line"
            android:orientation="horizontal"/>

    </RelativeLayout>
</RelativeLayout>
