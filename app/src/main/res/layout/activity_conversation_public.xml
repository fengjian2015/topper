<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/app_bg_color"
                android:orientation="vertical"
                tools:context="com.bclould.tea.ui.activity.ConversationPublicActivity">

    <LinearLayout
        android:id="@+id/ll_chat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/view"
        android:clickable="false"
        android:focusable="false"
        android:orientation="vertical">
        <include
            android:id="@+id/rl_title"
            layout="@layout/activity_top"/>

        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.scwang.smartrefresh.header.MaterialHeader
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/light"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/light">

            </android.support.v7.widget.RecyclerView>

            <!--<com.bclould.tea.ui.widget.LoadMoreListView-->
            <!--android:id="@+id/lv_message"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:background="@color/light"-->
            <!--android:divider="@null">-->
            <!--</com.bclould.tea.ui.widget.LoadMoreListView>-->

        </com.scwang.smartrefresh.layout.SmartRefreshLayout>
    </LinearLayout>

    <View
        android:id="@+id/view"
        style="@style/VerticalBoundaryStyle"
        android:layout_below="@+id/ll_menu"></View>

    <com.bclould.tea.ui.widget.MenuLinearLayout
        android:id="@+id/ll_menu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:layout_alignParentBottom="true"
        android:background="@color/boundary_color"
        android:orientation="horizontal">

    </com.bclould.tea.ui.widget.MenuLinearLayout>
</RelativeLayout>
