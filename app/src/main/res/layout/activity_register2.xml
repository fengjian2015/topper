<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#2B353F"
              android:fitsSystemWindows="true"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y80">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/y20"
            android:text="注册"
            android:textColor="@color/white"
            android:textSize="@dimen/x40"/>

        <TextView
            android:id="@+id/tv_login"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:paddingRight="@dimen/x30"
            android:text="登录"
            android:textColor="@color/white"/>

    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y120"
        android:src="@mipmap/img_toco_logo"/>

    <LinearLayout
        android:id="@+id/ll_step_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y580"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x20"
            android:layout_marginTop="@dimen/y20"
            android:background="@mipmap/img_signup"
            android:orientation="vertical"
            android:paddingLeft="@dimen/x50"
            android:paddingRight="@dimen/x50"
            android:paddingTop="@dimen/y166">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户名"
                android:textSize="@dimen/x30"/>

            <EditText
                android:id="@+id/et_user"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y120"
                android:hint="@string/et_username"
                android:inputType="text"
                android:lines="1"
                android:maxLength="20"
                android:maxLines="1"
                android:textColor="@android:color/black"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/x32"
                android:theme="@style/MyEditText"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y20"
                android:text="邮箱"
                android:textSize="@dimen/x30"/>

            <EditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y120"
                android:hint="@string/et_emily"
                android:inputType="textWebEmailAddress"
                android:lines="1"
                android:maxLength="28"
                android:maxLines="1"
                android:textColor="@android:color/black"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/x32"
                android:theme="@style/MyEditText"/>

        </LinearLayout>

        <Button
            android:id="@+id/btn_next"
            android:layout_width="@dimen/x250"
            android:layout_height="@dimen/y100"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/y20"
            android:background="@drawable/bg_blue_shape"
            android:text="下一步"
            android:textColor="@color/white"
            android:textSize="@dimen/x35"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_step_tow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y580"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x20"
            android:layout_marginTop="@dimen/y20"
            android:background="@mipmap/img_signup"
            android:orientation="vertical"
            android:paddingLeft="@dimen/x50"
            android:paddingRight="@dimen/x50"
            android:paddingTop="@dimen/y130">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="密码"
                android:textSize="@dimen/x30"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y120">

                <EditText
                    android:id="@+id/et_password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/et_password"
                    android:inputType="textPassword"
                    android:lines="1"
                    android:maxLength="20"
                    android:maxLines="1"
                    android:textColor="@android:color/black"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/x32"
                    android:theme="@style/MyEditText"/>

                <ImageView
                    android:id="@+id/iv_eye"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingBottom="@dimen/x20"
                    android:paddingRight="@dimen/x20"
                    android:paddingTop="@dimen/x20"
                    android:src="@drawable/password_selector"/>

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y20"
                android:text="邮箱验证码"
                android:textSize="@dimen/x30"/>

            <EditText
                android:id="@+id/et_email_code"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y120"
                android:hint="@string/et_vcode"
                android:inputType="number"
                android:lines="1"
                android:maxLength="20"
                android:maxLines="1"
                android:textColor="@android:color/black"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/x32"
                android:theme="@style/MyEditText"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/y20">

                <CheckBox
                    android:id="@+id/check_box"
                    style="@style/CustomCheckboxTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x20"
                    android:text="同意服务协议"
                    android:textColor="@color/blue2"
                    android:textSize="@dimen/x30"/>

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/x30"
            android:paddingRight="@dimen/x30">

            <Button
                android:id="@+id/btn_last_step"
                android:layout_width="@dimen/x250"
                android:layout_height="@dimen/y100"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/y20"
                android:background="@drawable/bg_blue_shape"
                android:text="上一步"
                android:textColor="@color/white"
                android:textSize="@dimen/x35"/>

            <Button
                android:id="@+id/btn_register"
                android:layout_width="@dimen/x250"
                android:layout_height="@dimen/y100"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/y20"
                android:background="@drawable/bg_gray_shape"
                android:text="注册"
                android:textColor="@color/white"
                android:textSize="@dimen/x35"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>