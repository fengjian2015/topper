<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light"
    android:orientation="vertical"
    tools:context="com.bclould.tocotalk.ui.activity.ConversationRecordFindActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:background="@color/white">

        <ImageView
            android:id="@+id/bark"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="@dimen/x20"
            android:src="@mipmap/icon_nav_return"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/chat_content"
            android:textColor="@color/black"
            android:textSize="@dimen/x32"/>
    </RelativeLayout>
    <TextView
        style="@style/HCutOffRule"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:layout_marginTop="@dimen/y20"
        app:cardCornerRadius="@dimen/x40">
        <RelativeLayout
            android:id="@+id/rl_qr"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y80"
            android:paddingLeft="@dimen/x30"
            android:paddingRight="@dimen/x30">
            <ImageView
                android:id="@+id/iv_search"
                android:layout_width="@dimen/x50"
                android:layout_height="@dimen/y50"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_sh_find"/>
            <EditText
                android:id="@+id/et_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x60"
                android:layout_marginRight="@dimen/x60"
                android:textSize="@dimen/x28"
                android:hint="@string/search"
                android:singleLine="true"
                android:textColor="@color/black"
                android:background="@null"/>
            <ImageView
                android:id="@+id/iv_delete"
                android:layout_width="@dimen/x50"
                android:layout_height="@dimen/y50"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@mipmap/icon_sh_cancel"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_select"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/y20"
        android:layout_marginLeft="@dimen/x60"
        android:layout_marginRight="@dimen/x60"
        >

    </android.support.v7.widget.RecyclerView>

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/y20"
        android:visibility="gone">

        <com.scwang.smartrefresh.header.WaterDropHeader
            android:layout_width="match_parent"
            android:background="@color/light"
            android:layout_height="wrap_content"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

        </android.support.v7.widget.RecyclerView>

        <!--<com.bclould.tocotalk.ui.widget.LoadMoreListView-->
        <!--android:id="@+id/lv_message"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:background="@color/light"-->
        <!--android:divider="@null">-->
        <!--</com.bclould.tocotalk.ui.widget.LoadMoreListView>-->

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</LinearLayout>
