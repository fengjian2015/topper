<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/rl_cache"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/y20"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:background="@drawable/bg_shallow_shape"
        android:padding="@dimen/y20">

        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/y40" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x15"
            android:layout_toRightOf="@+id/iv_head"
            style="@style/MainTextShallowStyle30"/>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            style="@style/SecondaryTextStyle28"/>

        <View
            android:id="@+id/view1"
            style="@style/HorizontalBoundaryStyle"
            android:layout_below="@+id/tv_name"
            android:layout_marginTop="@dimen/y20" />

        <ImageView
            android:id="@+id/iv_type"
            android:layout_width="@dimen/x60"
            android:layout_height="@dimen/y60"
            android:layout_below="@+id/view1"
            android:layout_marginTop="@dimen/y20" />

        <TextView
            android:id="@+id/tv_bi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view1"
            android:layout_marginLeft="@dimen/x15"
            android:layout_marginTop="@dimen/y30"
            android:layout_toRightOf="@+id/iv_type"
            style="@style/SecondaryTextStyle28"/>

        <TextView
            android:id="@+id/tv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/view1"
            android:layout_marginTop="@dimen/y30"
            style="@style/SecondaryTextStyle28"/>
    </RelativeLayout>


</LinearLayout>