<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/y133"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y132"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/touxiang"
            android:layout_width="@dimen/x100"
            android:layout_height="@dimen/x100"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x30"
            android:src="@mipmap/img_nfriend_headshot1"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x20">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y30"
                android:text="安子"
                android:textColor="@color/black"
                android:textSize="@dimen/x26"/>

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:layout_marginTop="@dimen/y20"
                android:text="9月21日 22:19"
                android:textSize="@dimen/x22"/>

            <RelativeLayout
                android:layout_width="@dimen/x250"
                android:layout_height="@dimen/y110"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/img_ea_bg1">

                <TextView
                    android:id="@+id/pinglun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/x20"
                    android:layout_marginRight="@dimen/x10"
                    android:maxLength="16"
                    android:text="评论评论评论评论评论评论评论评论评论评论评论评论评论评论"
                    android:textSize="@dimen/x20"/>

            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

    <TextView
        style="@style/HCutOffRule"/>

</LinearLayout>