<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/x600"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_shape"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_share_friend"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y100"
            android:background="@android:color/transparent"
            android:text="@string/share_friend"
            android:textColor="@color/blue2"
            android:textSize="@dimen/x28"></Button>

        <TextView
            android:id="@+id/tv_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y1"
            android:background="@color/gray"/>

        <Button
            android:id="@+id/btn_share_dynamic"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y100"
            android:background="@android:color/transparent"
            android:text="@string/share_dynamic"
            android:textColor="@color/blue2"
            android:textSize="@dimen/x28"/>
    </LinearLayout>

</LinearLayout>