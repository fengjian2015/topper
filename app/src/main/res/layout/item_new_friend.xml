<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y150"
                >


    <ImageView
        android:id="@+id/iv_touxiang"
        android:layout_width="@dimen/x100"
        android:layout_height="@dimen/x100"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/x20"/>


    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginTop="@dimen/y12"
        android:layout_toRightOf="@+id/iv_touxiang"
        style="@style/MainTextShallowStyle32"
       />

    <Button
        android:id="@+id/btn_consent"
        android:layout_width="@dimen/x120"
        android:layout_height="@dimen/y70"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/x20"
        android:background="@drawable/bg_blue_shape5"
        android:gravity="center"
        android:text="@string/consent"
        android:textColor="@color/white"
        android:layout_toLeftOf="@+id/btn_reject"
        android:textSize="@dimen/x26"/>
    <Button
        android:id="@+id/btn_reject"
        android:layout_width="@dimen/x120"
        android:layout_height="@dimen/y70"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/x20"
        android:background="@drawable/bg_white_shape"
        android:gravity="center"
        android:text="@string/reject"
        android:textColor="@color/red"
        android:textSize="@dimen/x26"/>
    <TextView
        style="@style/HorizontalBoundaryStyle"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>