<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_four_bg"
    android:orientation="vertical"
    android:padding="@dimen/x20">

    <TextView
        android:id="@+id/pop_bit"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/y15"
        android:layout_weight="1"
        android:drawableLeft="@mipmap/icon_talk_scrode"
        android:gravity="center"
        android:text="@string/rich_scan"
        android:textColor="@android:color/black"
        android:textSize="@dimen/x28"/>

    <TextView
        android:id="@+id/pop_eth"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:drawableLeft="@mipmap/icon_talk_redpocket"
        android:gravity="center"
        android:text="@string/qr_code_red_package"
        android:textColor="@android:color/black"
        android:textSize="@dimen/x28"/>

    <TextView
        android:id="@+id/pop_etc"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:drawableLeft="@mipmap/icon_talk_add"
        android:gravity="center"
        android:text="@string/add_friend"
        android:textColor="@android:color/black"
        android:textSize="@dimen/x28"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:drawableLeft="@mipmap/icon_talk_add"
        android:gravity="center"
        android:text="@string/my_friend"
        android:textColor="@android:color/black"
        android:textSize="@dimen/x28"/>

</LinearLayout>