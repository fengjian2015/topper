<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_msg_pop_shape"
    android:orientation="vertical"
    android:paddingLeft="@dimen/x30"
    android:paddingRight="@dimen/x30">

    <TextView
        android:id="@+id/pop_receipt"
        style="@style/MainTextDeepStyle30"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:drawableLeft="@mipmap/icon_pay_c"
        android:drawablePadding="@dimen/x30"
        android:gravity="center"
        android:text="@string/receipt"/>

    <TextView
        android:id="@+id/pop_payment"
        style="@style/MainTextDeepStyle30"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:drawableLeft="@mipmap/icon_get_c"
        android:drawablePadding="@dimen/x30"
        android:gravity="center"
        android:text="@string/payment"/>

</LinearLayout>