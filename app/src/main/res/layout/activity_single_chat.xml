<?xml version="1.0" encoding="utf-8"?>
<sj.keyboard.XhsEmoticonsKeyBoard
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ekb_emoticons_keyboard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#02000000"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_outer"
        android:clickable="true"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_chat"
            android:clickable="false"
            android:focusable="false"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y100"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/bark"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="@dimen/x20"
                    android:src="@mipmap/icon_nav_return"/>

                <TextView
                    android:id="@+id/title_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="傻狍子"
                    android:textColor="@color/black"
                    android:textSize="@dimen/x32"/>

                <ImageView
                    android:id="@+id/iv_else"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/x20"
                    android:src="@mipmap/icon_nav_more_selected"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/xx"
                style="@style/HCutOffRule"
                android:layout_below="@+id/rl_title"/>


            <LinearLayout
                android:id="@+id/ll_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rl_order_intro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/x20">

                    <TextView
                        android:id="@+id/tv_order_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="订单号：1318235"
                        android:textColor="@color/bar_grey"
                        android:textSize="@dimen/x30"/>

                    <TextView
                        android:id="@+id/tv_pay_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="等待支付"
                        android:textColor="#FE6633"
                        android:textSize="@dimen/x30"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_order_number"
                        android:layout_marginTop="@dimen/y20"
                        android:text="卖家安子的交易广告：fsd456jfslakf4564"
                        android:textColor="@color/bar_grey"
                        android:textSize="@dimen/x26"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_order_number"
                        android:layout_marginTop="@dimen/y20"
                        android:layout_toLeftOf="@+id/tv_time"
                        android:text="剩余"
                        android:textColor="@color/bar_grey"
                        android:textSize="@dimen/x26"/>

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/tv"
                        android:layout_below="@+id/tv_order_number"
                        android:layout_marginLeft="@dimen/x10"
                        android:layout_marginRight="@dimen/x10"
                        android:layout_marginTop="@dimen/y20"
                        android:layout_toLeftOf="@+id/tv"
                        android:text="28"
                        android:textColor="@color/black"
                        android:textSize="@dimen/x28"/>

                    <TextView
                        android:id="@+id/tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/tv_order_number"
                        android:layout_marginTop="@dimen/y20"
                        android:text="分钟"
                        android:textColor="@color/bar_grey"
                        android:textSize="@dimen/x26"/>

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/ll_order_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        style="@style/HCutOffRule"
                        android:layout_marginLeft="@dimen/x20"
                        android:layout_marginRight="@dimen/x20"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/y20"
                        android:layout_marginTop="@dimen/y20"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">


                            <TextView
                                android:id="@+id/tv_money"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1000"
                                android:textColor="@android:color/black"
                                android:textSize="@dimen/x35"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/y10"
                                android:text="交易金额(CNY)"
                                android:textColor="@color/bar_grey"
                                android:textSize="@dimen/x28"/>

                        </LinearLayout>

                        <TextView
                            android:layout_width="@dimen/y2"
                            android:layout_height="match_parent"
                            android:background="@color/gray"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">


                            <TextView
                                android:id="@+id/tv_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0.5"
                                android:textColor="@android:color/black"
                                android:textSize="@dimen/x35"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/y10"
                                android:text="交易数量(BTC)"
                                android:textColor="@color/bar_grey"
                                android:textSize="@dimen/x28"/>

                        </LinearLayout>


                        <TextView
                            android:layout_width="@dimen/y2"
                            android:layout_height="match_parent"
                            android:background="@color/gray"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">


                            <TextView
                                android:id="@+id/tv_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="124562"
                                android:textColor="@android:color/black"
                                android:textSize="@dimen/x35"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/y10"
                                android:text="交易价格(CNY)"
                                android:textColor="@color/bar_grey"
                                android:textSize="@dimen/x28"/>

                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        style="@style/HCutOffRule"
                        android:layout_marginLeft="@dimen/x20"
                        android:layout_marginRight="@dimen/x20"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/y20">

                        <TextView
                            android:id="@+id/tv2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/x25"
                            android:layout_marginTop="@dimen/y20"
                            android:text="买家："
                            android:textColor="@color/bar_grey"
                            android:textSize="@dimen/x30"/>

                        <TextView
                            android:id="@+id/tv_quota"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/tv2"
                            android:layout_toRightOf="@+id/tv2"
                            android:text="安子"
                            android:textColor="@color/bar_grey"
                            android:textSize="@dimen/x26"/>

                        <TextView
                            android:id="@+id/tv4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/x20"
                            android:layout_marginRight="@dimen/x10"
                            android:layout_marginTop="@dimen/y20"
                            android:layout_toLeftOf="@+id/tv_seller"
                            android:text="卖家："
                            android:textColor="@color/bar_grey"
                            android:textSize="@dimen/x30"/>

                        <TextView
                            android:id="@+id/tv_seller"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/tv4"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/x25"
                            android:text="小七"
                            android:textColor="@color/bar_grey"
                            android:textSize="@dimen/x26"/>

                        <TextView
                            android:id="@+id/tv3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv2"
                            android:layout_marginLeft="@dimen/x25"
                            android:layout_marginTop="@dimen/y20"
                            android:text="备注："
                            android:textColor="@color/bar_grey"
                            android:textSize="@dimen/x30"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/tv3"
                            android:layout_toRightOf="@+id/tv3"
                            android:text="先钱后币，非诚勿扰"
                            android:textColor="@color/bar_grey"
                            android:textSize="@dimen/x26"/>

                    </RelativeLayout>

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/rl_operability"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y100">

                    <TextView
                        style="@style/HCutOffRule"
                        android:layout_marginLeft="@dimen/x20"
                        android:layout_marginRight="@dimen/x20"/>

                    <LinearLayout
                        android:id="@+id/ll_details"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/x20"
                            android:text="详情"
                            android:textColor="@color/blue2"
                            android:textSize="@dimen/x30"/>

                        <ImageView
                            android:id="@+id/iv_jiantou"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/x10"
                            android:background="@mipmap/icon_wallet_more_selected"/>

                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_look_order"
                        android:layout_width="@dimen/x150"
                        android:layout_height="@dimen/y60"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/x20"
                        android:background="@drawable/bg_blue_shape"
                        android:text="查看订单"
                        android:textColor="@color/white"
                        android:textSize="@dimen/x26"
                        android:visibility="visible"/>

                    <LinearLayout
                        android:id="@+id/ll_seller"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <Button
                            android:id="@+id/btn_cancel_order2"
                            android:layout_width="@dimen/x150"
                            android:layout_height="@dimen/y60"
                            android:layout_marginRight="@dimen/x20"
                            android:background="@drawable/bg_tixian_shape"
                            android:text="取消订单"
                            android:textColor="@color/white"
                            android:textSize="@dimen/x26"/>

                        <Button
                            android:id="@+id/btn_confirm_send_coin"
                            android:layout_width="@dimen/x150"
                            android:layout_height="@dimen/y60"
                            android:layout_marginRight="@dimen/x20"
                            android:background="@drawable/bg_blue_shape"
                            android:text="确认放币"
                            android:textColor="@color/white"
                            android:textSize="@dimen/x26"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_buyer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <Button
                            android:id="@+id/btn_cancel_order"
                            android:layout_width="@dimen/x150"
                            android:layout_height="@dimen/y60"
                            android:layout_marginRight="@dimen/x20"
                            android:background="@drawable/bg_tixian_shape"
                            android:text="取消订单"
                            android:textColor="@color/white"
                            android:textSize="@dimen/x26"/>

                        <Button
                            android:id="@+id/btn_confirm_pay"
                            android:layout_width="@dimen/x150"
                            android:layout_height="@dimen/y60"
                            android:layout_marginRight="@dimen/x20"
                            android:background="@drawable/bg_blue_shape"
                            android:text="确认付款"
                            android:textColor="@color/white"
                            android:textSize="@dimen/x26"/>

                    </LinearLayout>

                    <TextView
                        style="@style/HCutOffRule"
                        android:layout_alignParentBottom="true"/>

                </RelativeLayout>

            </LinearLayout>

            <com.dashiji.biyun.ui.widget.LoadMoreListView
                android:id="@+id/lv_message"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@null">
            </com.dashiji.biyun.ui.widget.LoadMoreListView>


        </LinearLayout>

    </RelativeLayout>

</sj.keyboard.XhsEmoticonsKeyBoard>