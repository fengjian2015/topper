<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/app_bg_color"
    tools:context="com.bclould.tea.ui.activity.AnnouncementActivity">
    <include layout="@layout/activity_top"></include>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <EditText
                android:id="@+id/et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                style="@style/MainTextShallowStyle30"
                android:padding="@dimen/x30"
                android:gravity="left|top"
                android:layout_above="@+id/view"/>
            <View
                android:id="@+id/view"
                style="@style/HorizontalBoundaryStyle"
                android:layout_above="@+id/addImage"
                android:visibility="gone"
                ></View>
            <Button
                android:id="@+id/addImage"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y90"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="@dimen/y1"
                android:background="@color/boundary_color"
                style="@style/MainTextShallowStyle30"
                android:text="@string/add_images"
                android:visibility="gone"/>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>
