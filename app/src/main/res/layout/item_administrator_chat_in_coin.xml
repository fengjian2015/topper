<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginBottom="@dimen/y20"
    android:layout_marginLeft="@dimen/x50"
    android:layout_marginRight="@dimen/x50"
    android:layout_marginTop="@dimen/y20"
    app:cardBackgroundColor="@color/boundary_color"
    app:cardCornerRadius="@dimen/x15">

    <LinearLayout
        android:id="@+id/ll_red_expried_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/x20">

        <TextView
            android:id="@+id/tv_type_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/out_coin_broad"
            style="@style/MainTextShallowStyle32"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/y30"
            android:text="@string/in_coin_coins"
            style="@style/SecondaryTextStyle28"/>

        <TextView
            android:id="@+id/tv_coin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/y20"
            android:text="BTC"
            style="@style/MainTextShallowStyle36"
            android:textSize="@dimen/x45"
            android:textStyle="bold"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y20">

            <TextView
                android:id="@+id/tv_status_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/in_coin_count"
                style="@style/MainTextShallowStyle30"/>

            <TextView
                android:id="@+id/tv_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x20"
                android:layout_toRightOf="@+id/tv_status_hint"
                android:text="0.01"
                style="@style/MainTextShallowStyle30"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y20">

            <TextView
                android:id="@+id/tv_time_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/in_coin_time"
                style="@style/MainTextShallowStyle30"/>

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x20"
                android:layout_toRightOf="@+id/tv_time_hint"
                android:text="2018-04-17 19:20:30"
                style="@style/MainTextShallowStyle30"/>

        </RelativeLayout>

        <TextView
            style="@style/HorizontalBoundaryStyle"
            android:layout_marginTop="@dimen/y20"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x20"
                android:text="@string/look_details"
                style="@style/MainTextShallowStyle30"/>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/x20"
                android:src="@mipmap/iocn_person_turn"/>

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>