<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/y20"
    android:layout_marginLeft="@dimen/x30"
    android:layout_marginRight="@dimen/x30"
    android:background="@drawable/bg_shallow_shape">

    <ImageView
        android:id="@+id/iv_guess_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"/>

    <LinearLayout
        android:id="@+id/ll_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/y40"
        android:paddingLeft="@dimen/x30"
        android:paddingRight="@dimen/x30"
        android:paddingTop="@dimen/y40">


        <TextView
            android:id="@+id/tv_kaijiang_time"
            style="@style/BlueTextStyle28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y30">

            <ImageView
                android:id="@+id/iv_touxiang"
                android:layout_width="@dimen/x80"
                android:layout_height="@dimen/x80"
                android:src="@mipmap/img_tocotalk2"/>

            <TextView
                android:id="@+id/tv_guess_title"
                style="@style/MainTextShallowStyle30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x20"
                android:layout_toRightOf="@+id/iv_touxiang"
                android:ellipsize="end"
                android:singleLine="true"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_name"
                style="@style/SecondaryTextStyle24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/iv_touxiang"
                android:layout_marginLeft="@dimen/x20"
                android:layout_toRightOf="@+id/iv_touxiang"/>

            <Button
                android:id="@+id/btn_bet"
                style="@style/MainTextShallowStyle30"
                android:layout_width="@dimen/x150"
                android:layout_height="@dimen/y60"
                android:layout_alignParentRight="true"
                android:background="@drawable/bg_blue_shape"
                android:text="@string/bet"
                android:visibility="gone"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y30">

            <TextView
                style="@style/MainTextShallowStyle30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/present_periods"/>

            <TextView
                android:id="@+id/insert_coins_count"
                style="@style/SecondaryTextStyle28"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y30">

            <TextView
                style="@style/MainTextShallowStyle30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bonus_chi"/>

            <TextView
                android:id="@+id/tv_bonus_chi"
                style="@style/SecondaryTextStyle28"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y30">

            <TextView
                style="@style/MainTextShallowStyle30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/kaijiang_result"/>

            <TextView
                android:id="@+id/kaijiang_result"
                style="@style/SecondaryTextStyle28"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>


    </LinearLayout>

    <TextView
        style="@style/HorizontalBoundaryStyle"
        android:layout_below="@+id/ll_all"/>
</RelativeLayout>