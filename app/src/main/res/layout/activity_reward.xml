<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg_color"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100">

        <ImageView
            android:id="@+id/bark"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="@dimen/x20"
            android:src="@mipmap/icon_nav_return"/>

        <TextView
            android:id="@+id/tv_title"
            style="@style/MainTextShallowStyle36"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x20"
            android:layout_toRightOf="@+id/bark"
            android:text="@string/reward"/>

        <TextView
            android:id="@+id/tv_record"
            style="@style/BlueTextStyle28"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:paddingRight="@dimen/x20"
            android:text="@string/record"/>
    </RelativeLayout>

    <TextView
        style="@style/HorizontalBoundaryStyle"/>

    <LinearLayout
        android:id="@+id/ll_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y100"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x20"
                android:src="@mipmap/icon_remind"/>

            <TextView
                style="@style/RedTextStyle28"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x20"
                android:text="@string/reward_hint"/>

        </LinearLayout>

        <TextView
            style="@style/HorizontalBoundaryStyle"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y180"
            android:paddingLeft="@dimen/x20"
            android:paddingRight="@dimen/x20">

            <TextView
                android:id="@+id/tv_name"
                style="@style/MainTextShallowStyle30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"/>

            <ImageView
                android:id="@+id/iv_touxiang"
                android:layout_width="@dimen/x120"
                android:layout_height="@dimen/x120"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>

            <TextView
                style="@style/HorizontalBoundaryStyle"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_selector_coin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y150"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/x20"
            android:paddingRight="@dimen/x20">

            <TextView
                android:id="@+id/tv"
                style="@style/MainTextShallowStyle30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y20"
                android:text="@string/coins"/>

            <TextView
                style="@style/MainTextShallowStyle30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x5"
                android:layout_marginTop="@dimen/y20"
                android:layout_toRightOf="@+id/tv"
                android:text="*"/>

            <TextView
                android:id="@+id/tv_coin"
                style="@style/MainTextShallowStyle30"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@+id/tv"
                android:gravity="left|center_vertical"
                android:hint="@string/selector_coin"
                android:textColorHint="@color/secondary_text_color"/>

            <TextView
                style="@style/HorizontalBoundaryStyle"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y150"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/x20"
            android:paddingRight="@dimen/x20">

            <TextView
                android:id="@+id/tv2"
                style="@style/MainTextShallowStyle30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y20"
                android:text="@string/money"/>

            <TextView
                style="@style/MainTextShallowStyle30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x5"
                android:layout_marginTop="@dimen/y20"
                android:layout_toRightOf="@+id/tv2"
                android:text="*"/>

            <EditText
                android:id="@+id/et_count"
                style="@style/MainTextShallowStyle30"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/tv2"
                android:layout_toLeftOf="@+id/tv3"
                android:background="@android:color/transparent"
                android:hint="@string/et_count"
                android:inputType="numberDecimal"
                android:singleLine="true"
                android:textColorHint="@color/secondary_text_color"/>

            <TextView
                android:id="@+id/tv3"
                style="@style/MainTextShallowStyle30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/et_count"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/et_count"
                android:gravity="center"
                android:text="@string/individual"/>

            <TextView
                style="@style/HorizontalBoundaryStyle"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y150"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/x20"
            android:paddingRight="@dimen/x20">

            <TextView
                android:id="@+id/tv4"
                style="@style/MainTextShallowStyle30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y20"
                android:text="@string/remark"/>

            <EditText
                android:id="@+id/et_remark"
                style="@style/MainTextShallowStyle30"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/tv4"
                android:background="@android:color/transparent"
                android:hint="@string/et_memo"
                android:singleLine="true"
                android:textColorHint="@color/secondary_text_color"/>

            <TextView
                style="@style/HorizontalBoundaryStyle"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>

        <Button
            android:id="@+id/btn_confirm"
            style="@style/ShortBtnStyle"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/y80"
            android:text="@string/confirm"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_error"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_ununited"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/img_wrong"/>

        <TextView
            style="@style/MainTextShallowStyle30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y50"
            android:text="@string/loading_error_anew_loading_hint2"/>

    </LinearLayout>

</LinearLayout>