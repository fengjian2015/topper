<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/gray3" />
            <corners android:radius="10px" />
            <stroke android:width="1dp" android:color="@color/gray3" />
        </shape>
    </item>
    <item android:state_pressed="true"> <!-- 按钮按下时的渲染效果 @color/light_blue-->
        <shape android:shape="rectangle">
            <solid android:color="#64C0FF" />
            <corners android:radius="10px" />
            <stroke android:width="1dp" android:color="#64C0FF" />
        </shape>
    </item>
    <item> <!-- 默认 #0088ee -->
        <shape android:shape="rectangle">
            <solid android:color="#42B0FF" />
            <corners android:radius="10px" />
            <stroke android:width="1dp" android:color="#42B0FF" />
        </shape>
    </item>

</selector>