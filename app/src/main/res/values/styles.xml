<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="title_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@color/appThemeColor</item>
    </style>

    <!--自定义的输入框样式-->
    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">#a0a0a0</item>
        <item name="colorControlActivated">#a0a0a0</item>
    </style>

    <style name="TranslucentTheme" parent="AppTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!--自定义的dialog样式-->
    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!--自定义的dialog样式-->
    <style name="dialog2" parent="android:style/android:Theme.Material.Light.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!--加载中dialog-->
    <style name="LoadingProgressDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="LoadingProgressDialog2" parent="LoadingProgressDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item><!-- dim:模糊的 阴影效果 -->
    </style>

    <style name="CustomDialog" type="text/css">
        <item name="android:windowEnterAnimation">@anim/anim_in</item>
        <item name="android:windowExitAnimation">@anim/anim_out</item>
    </style>

    <style name="BottomPop">
        <item name="android:windowEnterAnimation">@anim/popup_in</item>
        <item name="android:windowExitAnimation">@anim/popup_out</item>
    </style>

    <style name="BottomDialog2" parent="android:style/android:Theme.Material.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="BottomDialog">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>


    <style name="AudioDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="CustomCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_style</item>
    </style>

    <color name="appThemeColor">#49B3FF</color>

    <style name="AnimationRightFade">
        <item name="android:windowEnterAnimation">@anim/popup_right</item>
        <item name="android:windowExitAnimation">@anim/popup_left</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.AppCompat.SearchResult.Subtitle">
        <item name="android:textSize">@dimen/x32</item>
    </style>

    <style name="Transparent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!--app主要背景色-->
    <style name="AppBgThemeColor">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/app_bg_color</item>
    </style>

    <!--短按鈕樣式-->
    <style name="LongBtnStyle">
        <item name="android:layout_width">@dimen/x690</item>
        <item name="android:layout_height">@dimen/y96</item>
        <item name="android:textSize">@dimen/x36</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/main_text_color</item>
        <item name="android:background">@drawable/bg_blue_shape</item>
    </style>

    <!--長按鈕樣式-->
    <style name="ShortBtnStyle">
        <item name="android:layout_width">@dimen/x560</item>
        <item name="android:layout_height">@dimen/y96</item>
        <item name="android:textSize">@dimen/x36</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/main_text_color</item>
        <item name="android:background">@drawable/bg_blue_shape</item>
    </style>

    <!--主要淺色字體樣式36號-->
    <style name="MainTextShallowStyle36">
        <item name="android:textSize">@dimen/x36</item>
        <item name="android:textColor">@color/main_text_color</item>
    </style>

    <!--主要淺色字體樣式32號-->
    <style name="MainTextShallowStyle32">
        <item name="android:textSize">@dimen/x32</item>
        <item name="android:textColor">@color/main_text_color</item>
    </style>

    <!--主要淺色字體樣式30號-->
    <style name="MainTextShallowStyle30">
        <item name="android:textSize">@dimen/x30</item>
        <item name="android:textColor">@color/main_text_color</item>
    </style>

    <!--主要深色字體樣式36號-->
    <style name="MainTextDeepStyle36">
        <item name="android:textSize">@dimen/x36</item>
        <item name="android:textColor">@color/app_bg_color</item>
    </style>

    <!--主要深色字體樣式32號-->
    <style name="MainTextDeepStyle32">
        <item name="android:textSize">@dimen/x32</item>
        <item name="android:textColor">@color/app_bg_color</item>
    </style>

    <!--主要深色字體樣式30號-->
    <style name="MainTextDeepStyle30">
        <item name="android:textSize">@dimen/x30</item>
        <item name="android:textColor">@color/app_bg_color</item>
    </style>

    <!--次要字體樣式28號-->
    <style name="SecondaryTextStyle28">
        <item name="android:textSize">@dimen/x28</item>
        <item name="android:textColor">@color/secondary_text_color</item>
    </style>

    <!--次要字體樣式24號-->
    <style name="SecondaryTextStyle24">
        <item name="android:textSize">@dimen/x24</item>
        <item name="android:textColor">@color/secondary_text_color</item>
    </style>

    <!--蓝色字体样式-->
    <style name="BlueTextStyle28">
        <item name="android:textSize">@dimen/x28</item>
        <item name="android:textColor">@color/btn_bg_color</item>
    </style>

    <!--蓝色字体样式-->
    <style name="BlueTextStyle36">
        <item name="android:textSize">@dimen/x36</item>
        <item name="android:textColor">@color/btn_bg_color</item>
    </style>

    <!--白色字体样式-->
    <style name="WhiteTextStyle36">
        <item name="android:textSize">@dimen/x36</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!--紅色字体样式-->
    <style name="RedTextStyle28">
        <item name="android:textSize">@dimen/x28</item>
        <item name="android:textColor">@color/red_color</item>
    </style>

    <!--橫向分割线樣式-->
    <style name="HorizontalBoundaryStyle">
        <item name="android:background">@color/boundary_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/y1</item>
    </style>

    <!--橫向深色分割线樣式-->
    <style name="HorizontalDeepBoundaryStyle">
        <item name="android:background">@color/secondary_text_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/y1</item>
    </style>

    <!--縱向分割线樣式-->
    <style name="VerticalBoundaryStyle">
        <item name="android:background">@color/boundary_color</item>
        <item name="android:layout_width">@dimen/x1</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!--頂部導航欄樣式-->
    <style name="TopNavigationBarStyle">
        <item name="android:background">@color/app_bg_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/y100</item>
    </style>

</resources>

